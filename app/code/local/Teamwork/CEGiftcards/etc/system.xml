<?xml version="1.0"?>
<config>
    <sections>
        <teamwork_cegiftcards translate="label">
            <label>Giftcards</label>
            <tab>teamwork</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <url translate="label">
                            <label>SVS Host Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[<strong style="color:green">Example: </strong> https://cloudwksvs.appspot.com/ ]]></comment>
                        </url>
                        <token translate="label">
                            <label>SVS Access Token</label>
                            <frontend_type>obscure</frontend_type>
                            <sort_order>25</sort_order>
                            <backend_model>adminhtml/system_config_backend_encrypted</backend_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>
                                <model>teamwork_cegiftcards/comment_token</model>
                            </comment>
                        </token>
                        <refund_giftcards translate="label">
                            <label>Refund giftcards when creating any credit memo or canceling order</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </refund_giftcards>


                        <code_length translate="label comment">
                            <label>Code Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Excluding prefix, suffix and separators.</comment>
                        </code_length>


                        <code_format translate="label">
                            <label>Code Format</label>
                            <frontend_type>select</frontend_type>
                            <source_model>teamwork_cegiftcards/config_source_format</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_format>

                        <code_prefix translate="label">
                            <label>Code Prefix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_prefix>

                        <code_suffix translate="label">
                            <label>Code Suffix</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </code_suffix>

                        <code_split translate="label comment">
                            <label>Dash Every X Characters</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>if empty no separation.</comment>
                        </code_split>

                        <!-- email options -->
                        <email_identity translate="label">
                            <label>Gift Card Notification Email Sender</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_identity</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_identity>
                        <email_template translate="label">
                            <label>Gift Card Notification Email Template</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </email_template>
                        <email_copy_to translate="label">
                            <label>Send virtual giftcard email copy to</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>105</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>emails which will be added to BCC when sending giftcard email (comma-separated)</comment>
                        </email_copy_to>
                        <email_copy_to_gc_sender translate="label">
                            <label>Send virtual giftcard email copy to giftcard sender</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>106</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>add 'Sender Email' (entered when buying giftcard) to BCC</comment>
                        </email_copy_to_gc_sender>

                        <ena_pin_validation translate="label">
                            <label>Enable PIN Validation</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </ena_pin_validation>

                        <ena_pin_generation translate="label">
                            <label>Enable PIN Generation for Virtual Gift Cards</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <depends><ena_pin_validation>1</ena_pin_validation></depends>
                        </ena_pin_generation>

                        <pin_length translate="label">
                            <label>PIN Length</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <depends>
                                <ena_pin_validation>1</ena_pin_validation>
                                <ena_pin_generation>1</ena_pin_generation>
                            </depends>
                        </pin_length>

                        <log_svs_requests translate="label">
                            <label>Log SVS Requests</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </log_svs_requests>

                        <virtual_capture translate="label">
                            <label>Capture Approach of Orders With Virtual Giftcard</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <source_model>teamwork_cegiftcards/config_source_virtualcapture</source_model>
                        </virtual_capture>
                    </fields>
                </general>
                <import translate="label">
                    <label>Import from CHQ options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <min_open_amount translate="label">
                            <label>If CHQ price is 0, set min giftcard open amount to</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-greater-than-zero</validate>
                        </min_open_amount>
                        <max_open_amount translate="label">
                            <label>If CHQ price is 0, set max giftcard open amount to</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <validate>validate-greater-than-zero</validate>
                        </max_open_amount>
                    </fields>
                </import>

                <!-- <product translate="label">
                    <label>Product Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <allow_message translate="label">
                            <label>Allow Gift Message</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allow_message>
                    </fields>
                </product>-->

            </groups>
        </teamwork_cegiftcards>
    </sections>
</config>