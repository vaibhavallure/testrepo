<?xml version="1.0"?>
<config>
	<sections>
		<teamwork_realtimeavailability translate="label" module="teamwork_realtimeavailability">
            <label>Real-time Availability</label>
            <tab>teamwork</tab>
            <sort_order>1100</sort_order>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
                <options translate="label" module="teamwork_realtimeavailability">
                    <label>General Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>1</show_in_store>
                    
                    <fields>
                        <path translate="label" module="teamwork_realtimeavailability">
                            <label>Server Host Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[<strong style="color:green">Example: </strong>https://qa2chq.teamworkinsight.com/]]></comment>
                        </path>
                        <default_location translate="label" module="teamwork_realtimeavailability">
                            <label>Default sale location</label>
                            <frontend_type>select</frontend_type>
                            <source_model>teamwork_realtimeavailability/source_defaultlocation</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_location>
                        <default_channel translate="label" module="teamwork_realtimeavailability">
                            <label>Default channel for multi channel products</label>
                            <frontend_type>select</frontend_type>
                            <source_model>teamwork_realtimeavailability/source_defaultchannel</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </default_channel>
                        <negative_inventory translate="label" module="teamwork_realtimeavailability">
                            <label>Take negative stock</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </negative_inventory>
						<update_time translate="label" module="teamwork_realtimeavailability">
                            <label>Update time period</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[<strong style="color:red">Cron must be setup</strong>]]></comment>
                        </update_time>
                    </fields>
                </options>
			</groups>
		</teamwork_realtimeavailability>
	</sections>
</config>