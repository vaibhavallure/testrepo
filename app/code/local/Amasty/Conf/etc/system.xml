<?xml version="1.0"?>
<config>
    <sections>
        <amconf translate="label" module="amconf">
            <label>Image-Based Dynamic Configurable Products</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>800</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <hide_dropdowns translate="label">
                            <label>Hide Configuration Drop-Downs</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </hide_dropdowns>
                        <reload_images translate="label comment">
                            <label>Reload Product Images</label>
                            <comment>If set to 'Yes', default product images will be replaced with images of the specific simple product, configured by customer</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reload_images>
                        <noimage_img translate="label comment">
                            <label>Replacement Image If No Product Image Found</label>
                            <comment>This image will be used if no product image uploaded for the current selection. Do not upload any image if you do not need this functionality.</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>amconf/adminhtml_system_config_backend_image_noimg</backend_model>
                            <base_url type="media" scope_info="1">amconf/noimg</base_url>
                            <upload_dir>media/amconf/noimg</upload_dir>
                            <sort_order>33</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </noimage_img>
                        <reload_name translate="label comment">
                            <label>Reload Product Name</label>
                            <comment>If set to 'Yes', default configurable product name will be replaced with the name of the specific simple product</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reload_name>
                        <show_clear translate="label comment">
                            <label>Show "Reset Configuration" option</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_clear>
                        <oneselect_reload translate="label comment">
                            <label>Reload Product Information When The First Attribute Selected</label>
                            <comment>If set to 'Yes', product images and descriptions will get reloaded after the first attribute is selected (first values of the other attributes will be used).</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </oneselect_reload>
                    </fields>
                </general>
            </groups>
        </amconf>
    </sections>
</config>
