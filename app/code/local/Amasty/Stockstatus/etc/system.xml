<config>
   <sections>
        <amstockstatus translate="label" module="amstockstatus">
            <label>Custom Stock Status</label>
            <tab>amasty</tab>
            <frontend_type>text</frontend_type>
            <sort_order>32119</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <displayforoutonly translate="label comment">
                            <label>Display Custom Stock Status for `Out of Stock` Items Only</label>
                            <comment>If set to `No`, custom stock status will be visible both for `in stock` and `out of stock` items.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayforoutonly>
                        <display_at_categoty translate="label comment">
                            <label>Display Custom Stock Status On Product List Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display_at_categoty>
                        <displayincart translate="label comment">
                            <label>Display Custom Stock Status in Shopping Cart</label>
                            <comment>Will display custom stock status for items in shopping cart.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayincart>
                        <displayinemail translate="label comment">
                            <label>Show Custom Status In Order Confirmation Email</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </displayinemail>
                        <userangesonly translate="label comment">
                            <label>Use Quantity Ranges Based Statuses Only</label>
                            <comment>If set to `No`, custom stock status set for product will show up if no range status found for particular product.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </userangesonly>
                        <use_range_rules translate="label comment">
                            <label>Activate rules for Quantity Range Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </use_range_rules>
                        <icononly translate="label comment">
                            <label>Display Icon Only (No Status Text)</label>
                            <comment>Display only icon and no custom status text on the product view and product list pages.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </icononly>
                        <stockalert translate="label">
                            <label>Enable `Back In Stock` Alert for Out of Stock Configurable Items</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </stockalert>
                        <outofstock translate="label comment">
                            <label>Show Out of Stock Configurable Attributes</label>
                            <comment>If set to `Yes`, out of stock configurations will be displayed in the drop-downs of configurable products with no possibility to purchase.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </outofstock>
                        <alt_text translate="label comment">
                            <label>Status Icon Title Text</label>
                            <comment>The text that will appear on mouse over a status icon image.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </alt_text>
                        <alt_text_loggedin translate="label">
                            <label>Show Status Icon Title Text for Logged in Customers Only</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </alt_text_loggedin>
                        <change_custom_configurable_status translate="label">
                            <label>Change Default Configurable Product Status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </change_custom_configurable_status>
                        <auto_select_attribute translate="label comment">
                            <label>Automatically select attributes that have one single value</label>
                            <comment>On the product view page, automatically select configurable attributes that have only 1 value available in the drop-down.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </auto_select_attribute>
                    </fields>
                </general>
            </groups>
        </amstockstatus>
    </sections>
</config>