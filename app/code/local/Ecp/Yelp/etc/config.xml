    <global>
        <models>
            <ecp_yelp>
                <class>Ecp_Yelp_Model</class>
                <resourceModel>ecp_yelp_mysql4</resourceModel>
            </ecp_yelp>
            <ecp_yelp_mysql4>
                <class>Ecp_Yelp_Model_Mysql4</class>
                <entities>
                    <yelp>
                        <table>yelp</table>
                    </yelp>
                </entities>
            </ecp_yelp_mysql4>
        </models>
        <resources>
            <ecp_yelp_setup>
                <setup>
                    <module>Ecp_Yelp</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
                </ecp_yelp_setup>
            <ecp_yelp_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ecp_yelp_write>
            <ecp_yelp_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ecp_yelp_read>
        </resources>
        <blocks>
            <ecp_yelp>
                <class>Ecp_Yelp_Block</class>
            </ecp_yelp>
        </blocks>
        <helpers>
            <ecp_yelp>
                <class>Ecp_Yelp_Helper</class>
            </ecp_yelp>
        </helpers>
    </global>
    <default>
        <ecp_yelp>
            <yelp>
                <value>some value</value>
            </yelp>
        </ecp_yelp>
    </default>
