            </ecp_yelp>
        </routers>
        <layout>
            <updates>
                <ecp_yelp>
                    <file>ecp/yelp.xml</file>
                </ecp_yelp>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <ecp_yelp>
                <use>admin</use>
                <args>
                    <module>Ecp_Yelp</module>
                    <frontName>ecpyelp</frontName>
