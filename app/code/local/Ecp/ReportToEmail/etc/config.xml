<?xml version="1.0"?>
<config>
    <modules>
        <Ecp_ReportToEmail>
            <version>1.0.0</version>
        </Ecp_ReportToEmail>
    </modules>
    <global>
        <models>
            <ecp_reporttoemail>
                <class>Ecp_ReportToEmail_Model</class>
                <resourceModel>ecp_reporttoemail_resource</resourceModel>
            </ecp_reporttoemail>
            <ecp_reporttoemail_resource>
            	<class>Ecp_ReportToEmail_Model_Resource</class>
				<entities>
					<reportlog>
						<table>ecp_sales_report_mail_log</table>
					</reportlog>
				</entities>
            </ecp_reporttoemail_resource>
        </models>
        
        <resources>
			<ecp_reporttoemail_setup>
				<setup>
					<module>Ecp_ReportToEmail</module>
				</setup>
				<connection>
					<use>default_setup</use>
				</connection>
			</ecp_reporttoemail_setup>
		</resources>
		
        <helpers>
            <ecp_reporttoemail>
                <class>Ecp_ReportToEmail_Helper</class>
            </ecp_reporttoemail>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <report translate="title" module="ecp_reporttoemail">
                                            <title>Report To Email</title>
                                        </report>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <crontab>
        <jobs>
            <ecp_reporttoemail_cron>
                <schedule>
                    <cron_expr>30 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>ecp_reporttoemail/observer::sendReport</model>
                </run>
            </ecp_reporttoemail_cron>

            <ecp_refundreporttoemail_cron>
                <schedule>
                    <cron_expr>0 7 * * *</cron_expr>
                </schedule>
                <run>
                    <model>ecp_reporttoemail/refund::sendReport</model>
                </run>
            </ecp_refundreporttoemail_cron>

<!--            <ecp_reporttoemail_comparisonreport_cron>-->
<!--                <schedule>-->
<!--                    <cron_expr>report/comparsion_report/comparison_report_cron_time</cron_expr>-->
<!--                </schedule>-->
<!--                <run>-->
<!--                    <model>ecp_reporttoemail/observer::</model>-->
<!--                </run>-->
<!--            </ecp_reporttoemail_comparisonreport_cron>-->
        </jobs>
    </crontab>
</config>