        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Ecp_Customercarenavleft>
                            <title>Customercarenavleft Module</title>
                            <sort_order>10</sort_order>
                        </Ecp_Customercarenavleft>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <ecp_customercarenavleft>
                    <file>ecp/customercarenavleft.xml</file>
                </ecp_customercarenavleft>
            </updates>
        </layout>
    </adminhtml>   
    <global>
        <models>
            <ecp_customercarenavleft>
                <class>Ecp_Customercarenavleft_Model</class>
                <resourceModel>ecp_customercarenavleft_mysql4</resourceModel>
            </ecp_customercarenavleft>
            <ecp_customercarenavleft_mysql4>
                <class>Ecp_Customercarenavleft_Model_Mysql4</class>
                <entities>
                    <customercarenavleft>
                        <table>customercarenavleft</table>
                    </customercarenavleft>
                </entities>
            </ecp_customercarenavleft_mysql4>
        </models>
        <resources>
            <ecp_customercarenavleft_setup>
                <setup>
                    <module>Ecp_Customercarenavleft</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
                </ecp_customercarenavleft_setup>
            <ecp_customercarenavleft_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ecp_customercarenavleft_write>
            <ecp_customercarenavleft_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ecp_customercarenavleft_read>
        </resources>
        <blocks>
            <ecp_customercarenavleft>
                <class>Ecp_Customercarenavleft_Block</class>
            </ecp_customercarenavleft>
        </blocks>
        <helpers>
            <ecp_customercarenavleft>
                <class>Ecp_Customercarenavleft_Helper</class>
            </ecp_customercarenavleft>
        </helpers>
    </global>
    <default>
        <ecp_customercarenavleft>
            <customercarenavleft>
                <value>some value</value>
            </customercarenavleft>
        </ecp_customercarenavleft>
    </default>
</config>