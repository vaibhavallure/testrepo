<?xml version="1.0"?>
<config>
    <modules>
        <Ecp_Customercarenavleft>
        <version>0.1.1</version>
        </Ecp_Customercarenavleft>
    </modules>
    <frontend>
        <routers>
            <ecp_customercarenavleft>
                <use>standard</use>
                <args>
                    <module>Ecp_Customercarenavleft</module>
                    <frontName>ecpcustomercare</frontName>
                </args>
            </ecp_customercarenavleft>
        </routers>
        <layout>
            <updates>
                <ecp_customercarenavleft>
                    <file>ecp/customercarenavleft.xml</file>
                </ecp_customercarenavleft>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <ecp_customercarenavleft>
                <use>admin</use>
                <args>
                    <module>Ecp_Customercarenavleft</module>
                    <frontName>ecpcustomercare</frontName>
                </args>
            </ecp_customercarenavleft>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <cms_page_prepare_save>
                <observers>
                    <ecp_cms_save_page>
                        <type>singleton</type>
                        <class>Ecp_Customercarenavleft_Model_Observer</class>
                        <method>savePage</method>
                    </ecp_cms_save_page>
                </observers>
            </cms_page_prepare_save> 
            <adminhtml_cms_page_edit_tab_main_prepare_form>
                <observers>
                    <ecp_cms_prepare_form>
                        <type>singleton</type>
                        <class>Ecp_Customercarenavleft_Model_Observer</class>
                        <method>prepareForm</method>
                    </ecp_cms_prepare_form>
                </observers>
            </adminhtml_cms_page_edit_tab_main_prepare_form>
        </events>
