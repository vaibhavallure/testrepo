    <global>
        <models>
            <ecp_logo>
                <class>Ecp_Logo_Model</class>
                <resourceModel>ecp_logo_mysql4</resourceModel>
            </ecp_logo>
            <ecp_logo_mysql4>
                <class>Ecp_Logo_Model_Mysql4</class>
                <entities>
                    <logo>
                        <table>ecp_logo</table>
                    </logo>
                </entities>
            </ecp_logo_mysql4>
        </models>
        <resources>
            <ecp_logo_setup>
                <setup>
                    <module>Ecp_Logo</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
                </ecp_logo_setup>
            <ecp_logo_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ecp_logo_write>
            <ecp_logo_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ecp_logo_read>
        </resources>
        <blocks>
            <ecp_logo>
                <class>Ecp_Logo_Block</class>
            </ecp_logo>
        </blocks>
        <helpers>
            <ecp_logo>
                <class>Ecp_Logo_Helper</class>
            </ecp_logo>
        </helpers>
    </global>
