                <args>
                    <module>Ecp_Logo</module>
                    <frontName>ecplogo</frontName>
                </args>
            </ecp_logo>
        </routers>
        <layout>
            <updates>
                <ecp_logo>
                    <file>ecp/logo.xml</file>
                </ecp_logo>
            </updates>
        </layout>
    </frontend>
            <admin>
        <routers>
            <ecp_logo>
                <use>admin</use>
                <args>
                    <module>Ecp_Logo</module>
                    <frontName>ecplogo</frontName>
                </args>
            </ecp_logo>
        </routers>
    </admin>
