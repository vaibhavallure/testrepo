<config>
    <modules>
        <FME_Restrictcustomergroup>
            <version>1.4.0</version>
        </FME_Restrictcustomergroup>
    </modules>
    <frontend>
        <routers>
            <restrictcustomergroup>
                <use>standard</use>
                <args>
                    <module>FME_Restrictcustomergroup</module>
                    <frontName>restrictcustomergroup</frontName>
                </args>
            </restrictcustomergroup>
        </routers>
        <layout>
