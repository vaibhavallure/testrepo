            </updates>
        </layout>
		<events>
			<controller_action_layout_generate_blocks_after>
				<observers>
					<fme_restrictcustomergroup_restrict_type>
						<type>singleton</type>
						<class>FME_Restrictcustomergroup_Model_Observer</class>
						<method>restrictByType</method>
					</fme_restrictcustomergroup_restrict_type>
				</observers>
			</controller_action_layout_generate_blocks_after>
		</events>
		
		
    </frontend>
    <admin>
        <routers>
