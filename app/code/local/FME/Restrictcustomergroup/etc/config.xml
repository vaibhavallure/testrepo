                    <use>core_write</use>
                </connection>
            </restrictcustomergroup_write>
            <restrictcustomergroup_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </restrictcustomergroup_read>
        </resources>
        <blocks>
            <restrictcustomergroup>
                <class>FME_Restrictcustomergroup_Block</class>
            </restrictcustomergroup>
        </blocks>
		<blocks>
			<cms>
                <rewrite>
                    <block>FME_Restrictcustomergroup_Block_Cms_Block_Block</block>
                </rewrite>
            </cms>
		</blocks>
		
        <helpers>
            <restrictcustomergroup>
