    <global>
        <models>
            <restrictcustomergroup>
                <class>FME_Restrictcustomergroup_Model</class>
                <resourceModel>restrictcustomergroup_mysql4</resourceModel>
            </restrictcustomergroup>
            <restrictcustomergroup_mysql4>
                <class>FME_Restrictcustomergroup_Model_Mysql4</class>
                <entities>
                    <restrictcustomergroup>
