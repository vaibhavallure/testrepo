					</restrictcustomergroup_blocks>
                </entities>
            </restrictcustomergroup_mysql4>
        </models>
        <resources>
            <restrictcustomergroup_setup>
                <setup>
                    <module>FME_Restrictcustomergroup</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </restrictcustomergroup_setup>
            <restrictcustomergroup_write>
