<?xml version="1.0"?>
<config>
	<modules>
		<Allure_OrderProcessor>
			<name>Allure - Order Processor</name>
			<version>1.0.0</version>
		</Allure_OrderProcessor>
	</modules>
	
	<global>

		<helpers>
			<allure_orderprocessor>
				<class>Allure_OrderProcessor_Helper</class>
			</allure_orderprocessor>
		</helpers>

		<models>
			<allure_orderprocessor>
				<class>Allure_OrderProcessor_Model</class>
			</allure_orderprocessor>
		</models>
	</global>

	<crontab>
		<jobs>
			<allure_orderprocessor_schedule>
				<schedule>
					<cron_expr>15,45 * * * *</cron_expr>
				</schedule>
				<run>
					<model>allure_orderprocessor/observer::runProcessOrders</model>
				</run>
			</allure_orderprocessor_schedule>
		</jobs>
	</crontab>
	
	<default>
		<allure_orderprocessor>
			<general>
				<stores>0</stores>
				<debug>0</debug>
			</general>
		</allure_orderprocessor>
	</default>
	
</config>