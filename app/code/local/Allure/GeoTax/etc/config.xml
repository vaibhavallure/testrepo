<?xml version="1.0" encoding="UTF-8"?>
<config>
	<modules>
		<Allure_GeoTax>
			<name>Allure - GeoLocation Based Taxes</name>
			<version>1.0.0</version>
			<depends>
				<Allure_Core />
				<Allure_GeoLocation />
			</depends>
		</Allure_GeoTax>
	</modules>
	<global>
		<helpers>
			<allure_geotax>
				<class>Allure_GeoTax_Helper</class>
			</allure_geotax>
			<catalog>
				<rewrite>
					<product_type_composite>Allure_GeoTax_Helper_Catalog_Product_Type_Composite</product_type_composite>
				</rewrite>
			</catalog>
		</helpers>
		<models>
			<allure_geotax>
				<class>Allure_GeoTax_Model</class>
			</allure_geotax>
			<tax>
				<rewrite>
					<calculation>Allure_GeoTax_Model_Tax_Calculation</calculation>
					<sales_total_quote_tax>Allure_GeoTax_Model_Sales_Total_Quote_Tax</sales_total_quote_tax>
				</rewrite>
			</tax>
		</models>
	</global>
	<default>
		<allure_geolocation>
			<tax_calculation>
				<status>0</status>
				<ignore_default>0</ignore_default>
				<debug>0</debug>
			</tax_calculation>
		</allure_geolocation>
	</default>
</config>