<?xml version="1.0" encoding="UTF-8"?>

<config>
    <modules>
        <Allure_Facebook>
             <version>0.9.9</version>
        </Allure_Facebook>
    </modules>
    
    <global>
        <models>
            <facebook>
                <class>Allure_Facebook_Model</class>
            </facebook>
        </models>
		<blocks>
			<facebook>
                <class>Allure_Facebook_Block</class>
            </facebook>
        </blocks>
        <helpers>
	    <facebook>
                <class>Allure_Facebook_Helper</class>
            </facebook>
        </helpers>
        
	<resources>
	    <facebook_setup>
		<setup>
	            <module>Allure_Facebook</module>
	            <class>Mage_Customer_Model_Entity_Setup</class>
		</setup>
		<connection>
                    <use>core_setup</use>
                </connection>
	    </facebook_setup>
	</resources>
    </global>
    
    <frontend>
	<routers>
            <facebook>
                <use>standard</use>
                <args>
                    <module>Allure_Facebook</module>
                    <frontName>facebook</frontName>
                </args>
            </facebook>
        </routers>
	<layout>
            <updates>
                <facebook module="Allure_Facebook">
                    <file>allure/facebook.xml</file>
                </facebook>
            </updates>
        </layout>
        <translate>
            <modules>
                <Allure_Facebook>
                    <files>
                        <default>Allure_Facebook.csv</default>
                    </files>
                </Allure_Facebook>
            </modules>
        </translate>
    </frontend>
    
    <adminhtml>
        <translate>
            <modules>
                <Allure_Facebook>
                    <files>
                        <default>Allure_Facebook.csv</default>
                    </files>
                </Allure_Facebook>
            </modules>
        </translate>    
    </adminhtml>
    
    <default>
    	<customer>
    		<facebook>
    			<locale>en_US</locale>
    		</facebook>
    	</customer>
    </default>
    
</config>
