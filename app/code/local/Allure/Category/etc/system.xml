<?xml version="1.0"?>
<config>
    <sections>
        <merchandiser>
            <class>merchandiser-top</class>
            <label>Visual Merchandiser</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>40</sort_order>
            <show_in_default>1</show_in_default>
            <groups>
                <options translate="label">
                    <label>Visual Merchandising options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <expanded>1</expanded>
                    <fields>
                        <hide_simple_products translate="label">
                            <label>Category Id to hide simple products in VM</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>81</sort_order>
                            <comment><![CDATA[Comma-separated ]]></comment>
                            <show_in_default>1</show_in_default>
                        </hide_simple_products>
                    </fields>
                </options>
            </groups>
        </merchandiser>
        <allure>
            <groups>
                <options translate="label">
                    <label>Global Default Post Length</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <expanded>1</expanded>
                    <fields>
                        <category_global_post_length>
                            <label>Set Global Post Length</label>
                            <frontend_type>select</frontend_type>
                            <source_model>allure_category/System_Config_Source_Category</source_model>
                            <sort_order>85</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[This setting determines the global default post length when no category ID was set]]></comment>
                        </category_global_post_length>
                    </fields>
                </options>
                <!-- category url rewrite -->
                <category_url>
                	<label>Category Url Rewrite</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>110</sort_order>
                    <show_in_default>1</show_in_default>
                    <fields>
                        <category_ids>
                            <label>Select category for url changes</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>allure_category/system_config_source_categoryList</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </category_ids>
                        <allow_parent_category>
                            <label>Allow parent category for url changes</label>
                           	<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_parent_category>
                        <allow_subparent_category>
                            <label>Allow sub-parent category for url changes</label>
                           	<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </allow_subparent_category>
                    </fields>
                </category_url>
            </groups>
        </allure>
    </sections>
</config>
