<?xml version="1.0"?>
<config>
	<sections>
		<!-- Multi Address order email template Design add into sales email configuration start. -->
		<sales_email>
			<label>Sales Emails</label>
			<tab>sales</tab>
			<frontend_type>text</frontend_type>
			<sort_order>301</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<allure_multiaddress_sales_email translate="label">
					<label>Multi Address Order - Sales Emails Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>301</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<multi_order_allow_email>
							<label>Is combile multiple order into one mail.</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</multi_order_allow_email>
						<template translate="label">
							<label>Multi Address Order - General Order Email Template</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Email contains one ore more than one orders.</comment>
						</template>
						<guest_template translate="label">
							<label>Multi Address Order - Guest Order Email Template</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_email_template</source_model>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Email contains one ore more than one orders.</comment>
						</guest_template>
					</fields>
				</allure_multiaddress_sales_email>
			</groups>
		</sales_email>
		<!-- Multi address order email template Design add into sales email configuration end. -->
	</sections>
</config>
