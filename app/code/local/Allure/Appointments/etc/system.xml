<?xml version="1.0" encoding="UTF-8"?>
<config>
	<sections>
	  <trans_email translate="label" module="core">
            <class>separator-top</class>
            <label>Store Email Addresses</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>90</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
			  <bookings translate="label">
		                    <label>Bookings</label>
		                    <frontend_type>text</frontend_type>
		                    <sort_order>5</sort_order>
		                    <show_in_default>1</show_in_default>
		                    <show_in_website>1</show_in_website>
		                    <show_in_store>1</show_in_store>
		                    <fields>
		                        <email translate="label">
		                            <label>Sender Email</label>
		                            <frontend_type>text</frontend_type>
		                            <validate>validate-email</validate>
		                            <backend_model>adminhtml/system_config_backend_email_address</backend_model>
		                            <sort_order>2</sort_order>
		                            <show_in_default>1</show_in_default>
		                            <show_in_website>1</show_in_website>
		                            <show_in_store>1</show_in_store>
		                        </email>
		                        <name translate="label">
		                            <label>Sender Name</label>
		                            <frontend_type>text</frontend_type>
		                            <backend_model>adminhtml/system_config_backend_email_sender</backend_model>
		                            <validate>validate-emailSender</validate>
		                            <sort_order>1</sort_order>
		                            <show_in_default>1</show_in_default>
		                            <show_in_website>1</show_in_website>
		                            <show_in_store>1</show_in_store>
		                        </name>
		                    </fields>
		             </bookings>
		    </groups>
	  </trans_email>
		<appointments translate="label" module="appointments">
			<label>Appointments</label>
			<tab>allure</tab>
			<sort_order>50</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
			<api translate="label">
					<label>Text Message Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>10</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<google_api_key translate="label">
							<label>Google API Key</label>
							<frontend_type>text</frontend_type>
							<comment>Google API Key for API Shortner</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<sort_order>80</sort_order>
						</google_api_key>
						
						<soap_url translate="label">
							<label>Soap URL</label>
							<frontend_type>text</frontend_type>
							<comment>This is Soap URL</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<sort_order>81</sort_order>
						</soap_url>
						<soap_username translate="label">
							<label>Soap Username</label>
							<frontend_type>text</frontend_type>
							<comment>This is username of soap</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<sort_order>82</sort_order>
						</soap_username>
						<soap_password translate="label">
							<label>Soap Password</label>
							<frontend_type>text</frontend_type>
							<comment>This is password of soap</comment>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<sort_order>83</sort_order>
						</soap_password>
					</fields>
				</api>
				<general translate="label">
					<label>Store Mapping Settings</label>
					<frontend_type>text</frontend_type>
					<sort_order>11</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<storemapping translate="label">
							<!-- <label>Store Information</label> -->
							<frontend_model>Allure_Appointments_Block_Adminhtml_CustomStoreInformation</frontend_model>
							<backend_model>adminhtml/system_config_backend_serialized</backend_model>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
							<sort_order>11</sort_order>
						</storemapping>
					</fields>
				</general>
				<debug translate="label">
					<label>LOG SETTINGS</label>
					<frontend_type>text</frontend_type>
					<sort_order>12</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<debug_enabled translate="label">
							<label>Appointment Customer Debug Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</debug_enabled>
					</fields>
				</debug>
				<grouping_on translate="label">
					<label>Location Dropdown Setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>12</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<groups translate="label">
							<label>Enter Store Ids To Enable Group Drop down On Appontment Booking Page</label>
							<frontend_type>text</frontend_type>
							<comment>separate by comma</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</groups>
					</fields>
				</grouping_on>
				<app_bcc translate="label">
					<label>BCC Setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>12</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<emails translate="label">
							<label>Add BCC contacts for appointment confirmation</label>
							<frontend_type>text</frontend_type>
							<comment>separate by comma</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</emails>
					</fields>
				</app_bcc>

				<no_of_people translate="label">
					<label>Number of people in group - setting</label>
					<frontend_type>text</frontend_type>
					<sort_order>12</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>
						<admin_side translate="label">
							<label>Admin Side</label>
							<frontend_type>text</frontend_type>
							<comment>Left Blank For No Limitation</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</admin_side>
						<user_side translate="label">
							<label>User Side</label>
							<frontend_type>text</frontend_type>
							<comment>Left Blank For No Limitation</comment>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</user_side>
						<popup_msg translate="label">
							<label>Popup Message</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</popup_msg>
					</fields>
				</no_of_people>
			</groups>
		</appointments>
	</sections>
</config>