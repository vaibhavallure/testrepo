<?xml version="1.0"?>
<config>
	<sections>
		<!-- Order settings with Signifyd -->
		<allure_orders translate="label" module="allure_orders">
			<label>Order Settings with Signifyd</label>
			<tab>allure</tab>
			<frontend_type>text</frontend_type>
			<sort_order>10030</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<settings>
					<label>Orders settings with signifyd</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
						<fields>
							<enabled>
								<label>Enabled</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<sort_order>10</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
							</enabled>
							<order_email_after_invoice>
								<label>Order confirmation email after invoice.</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<sort_order>20</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>Send order confirmation email after payment capture and invoice generate when Signifyd plugin is active.</comment>
							</order_email_after_invoice>
							<cancel_order_email>
								<label>Order cancellation email.</label>
								<frontend_type>select</frontend_type>
								<source_model>adminhtml/system_config_source_yesno</source_model>
								<sort_order>30</sort_order>
								<show_in_default>1</show_in_default>
								<show_in_website>1</show_in_website>
								<show_in_store>1</show_in_store>
								<comment>Send order cancellation email when Signifyd plugin is active.</comment>
							</cancel_order_email>
						</fields>
				</settings>
			</groups>
		</allure_orders>
	</sections>
</config>
