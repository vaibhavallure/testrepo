<?xml version="1.0"?>
<config>
    <modules>
        <Allure_CatalogSearch>
            <version>0.1.0</version>
        </Allure_CatalogSearch>
    </modules>
    <global>
    	<controllers>
             <Allure_CatalogSearch>
                  <rewrite>
                      <catalogsearch>Allure_CatalogSearch_ResultController</catalogsearch>
                  </rewrite>
             </Allure_CatalogSearch>
        </controllers>
        <blocks>
            <al_catalogsearch>
                <class>Allure_CatalogSearch_Block</class>
            </al_catalogsearch>
        </blocks>
    </global>
    	<frontend>
		<routers>
			<catalogsearch>
				<args>
					<modules>
						<Allure_CatalogSearch before="Mage_CatalogSearch">Allure_CatalogSearch</Allure_CatalogSearch>
					</modules>
				</args>
			</catalogsearch>
		</routers>
	</frontend>
</config> 
