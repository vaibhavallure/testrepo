<?xml version="1.0"?>
<config>
	<modules>
		<Allure_Noimages>
			<name>Allure - No Images Products</name>
			<version>0.1.0</version>
		</Allure_Noimages>
	</modules>
	<global>
		<blocks>
			<noimages>
				<class>Allure_Noimages_Block</class>
			</noimages>
		</blocks>
	</global>
	<admin>
		<routers>
			<noimages>
				<use>admin</use>
				<args>
					<module>Allure_Noimages</module>
					<frontName>admin_noimages</frontName>
				</args>
			</noimages>
		</routers>
	</admin>
	<adminhtml>
		<menu>
			<allure>
				<children>
					<store>
						<title>Store</title>
						<sort_order>20</sort_order>
						<children>
							<noimages>
								<title>No Images Products</title>
								<sort_order>3</sort_order>
								<action>admin_noimages/adminhtml_noimages</action>
							</noimages>
						</children>
						</store>
				</children>
			</allure>
		</menu>
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<noimages translate="title">
							<title>Products With No Images</title>
							<sort_order>20</sort_order>
							<children>
								<noimages translate="title">
									<title>Manage Products with No Images</title>
									<sort_order>30</sort_order>
								</noimages>
							</children>
						</noimages>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<noimages>
					<file>noimages.xml</file>
				</noimages>
			</updates>
		</layout>
	</adminhtml>
</config>