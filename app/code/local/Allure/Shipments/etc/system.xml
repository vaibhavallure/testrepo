<config>
    <sections>
        <carriers translate="label" module="shipping">
            <label>Shipping Methods</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>320</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                 <bakerloo_store_pickup translate="label">
                    <label>Store Pickup</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/active</config_path>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <name translate="label">
                            <label>Method Name</label>
                            <frontend_type>text</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/name</config_path>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </name>
                        <title translate="label">
                            <label>Title</label>
                            <frontend_type>text</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/title</config_path>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <price translate="label">
                            <label>Price</label>
                            <frontend_type>text</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/price</config_path>
                            <sort_order>35</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </price>
                        <stores translate="label">
                            <label>Enabled Stores</label>
                            <frontend_type>multiselect</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/stores</config_path>
                            <source_model>bakerloo_shipping/adminhtml_system_config_source_stores</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </stores>
                        <render_as translate="label">
                            <label>Render As</label>
                            <frontend_type>select</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/render_as</config_path>
                            <source_model>bakerloo_shipping/adminhtml_system_config_source_renderoptions</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </render_as>
                        <ship translate="label">
                            <label>Create Shipment</label>
                            <frontend_type>select</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/ship</config_path>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>59</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ship>
                        <sort_order translate="label">
                            <label>Sort Order</label>
                            <frontend_type>text</frontend_type>
                            <config_path>carriers/bakerloo_store_pickup/sort_order</config_path>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </sort_order>
                    </fields>
                </bakerloo_store_pickup>
            </groups>
        </carriers>
    </sections>
</config>
