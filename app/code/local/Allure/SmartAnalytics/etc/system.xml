<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
		<allure_smartanalytics>
			<label>Google SmartAnalytics</label>
			<tab>allure</tab>
			<sort_order>100</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable SmartAnalytics</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <account_id>
                            <label>GA Account ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>required-entry</validate>
                            <comment>Enter your Google Analytics ID here. You can login into your Google Analytics account to find your ID e.g. UA-XXXXXXX-1</comment>
                        </account_id>
						<email_id>
                            <label>Email (Optional)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>validate-email</validate>
                            <comment>Provide your work email address to receive plugin enhancement update</comment>
                        </email_id>
                    </fields>
                </general>
                <ecommerce translate="label" module="allure_smartanalytics">
                    <label>Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <checkout_url>
                            <label>Checkout  URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Your Checkout URL, Example - /checkout/onepage</comment>
                        </checkout_url>
                        <success_url>
                            <label>Checkout Success Page URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enter Your Checkout Success Page URL, Example - /checkout/onepage/success</comment>
                        </success_url>
                         <home_id>
                            <label>Home Page Category ID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>45</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
							<validate>validate-number</validate>
                            <comment>Enter the category ID of the products that you want to showcase on the home page. You can find the category Id from Catalog > managed products section.</comment>
                        </home_id>
                         <brand>
                            <label>Brand Code (Optional)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Provide the brand code to see the product brand name in GA.</comment>
                        </brand>

                    </fields>
                </ecommerce>
				<support translate="label" module="allure_smartanalytics">
                    <label>Advanced Features</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>

                    <fields>
                        <Threshold>
                            <frontend_type>hidden</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>

                        </Threshold>
                        <AnonIP>
                            <label>IP Anonymization (Optional)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
                                <![CDATA[Use this feature to anonymize (or stop collecting) the I.P Address of your users in Google Analytics. Be in legal compliance by using I.P Anonymization which is important for EU countries. Read our <a href="https://www.tatvic.com/privacy-policy/?ref=plugin_policy&utm_source=plugin_backend&utm_medium=magento_free_extension&utm_campaign=GDPR_complaince_ecomm_plugins" target="_blank">privacy policy</a>]]>
                            </comment>
                        </AnonIP>
                         <OptOut>
                            <label>Enable Google Analytics Opt Out(Optional)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>85</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>
								<![CDATA[
								Use this feature to provide website visitors the ability to prevent their data from being used by Google Analytics As per the GDPR compliance. Read our <a href="https://www.tatvic.com/privacy-policy/?ref=plugin_policy&utm_source=plugin_backend&utm_medium=magento_free_extension&utm_campaign=GDPR_complaince_ecomm_plugins" target="_blank">privacy policy</a>]]>
							</comment>
                        </OptOut>
                        </fields>
                </support>
			</groups>
		</allure_smartanalytics>
    </sections>
</config>
