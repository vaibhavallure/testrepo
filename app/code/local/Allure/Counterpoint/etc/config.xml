<?xml version="1.0"?>
<config>
	<modules>
		<Allure_Counterpoint>
			<name>Allure - Counterpoint Bridge</name>
			<version>1.0.1</version>
			<depends>
				<Allure_Core />
			</depends>
		</Allure_Counterpoint>
	</modules>

	<global>

		<helpers>
			<allure_counterpoint>
				<class>Allure_Counterpoint_Helper</class>
			</allure_counterpoint>
		</helpers>

		<models>
			<allure_counterpoint>
				<class>Allure_Counterpoint_Model</class>
			</allure_counterpoint>
			<core>
				<rewrite>
					<store_api>Allure_Counterpoint_Model_Core_Store_Api</store_api>
					<store_api_v2>Allure_Counterpoint_Model_Core_Store_Api_V2</store_api_v2>
				</rewrite>
			</core>
		</models>

		<blocks>
			<adminhtml>
				<rewrite>
					<customer_grid>Allure_Counterpoint_Block_Adminhtml_Customer_Grid</customer_grid>
				</rewrite>
			</adminhtml>
		</blocks>

		<resources>
			<allure_counterpoint_setup>
				<setup>
					<module>Allure_Counterpoint</module>
					<class>Mage_Sales_Model_Mysql4_Setup</class>
				</setup>
				<connection>
					<use>default_setup</use>
				</connection>
			</allure_counterpoint_setup>
		</resources>

		<fieldsets>
			<sales_convert_quote>
				<create_order_method>
					<to_order>*</to_order>
				</create_order_method>
				<counterpoint_order_id>
					<to_order>*</to_order>
				</counterpoint_order_id>
				<counterpoint_str_id>
					<to_order>*</to_order>
				</counterpoint_str_id>
				<counterpoint_sta_id>
					<to_order>*</to_order>
				</counterpoint_sta_id>
				<counterpoint_drw_id>
					<to_order>*</to_order>
				</counterpoint_drw_id>
				<counterpoint_doc_id>
					<to_order>*</to_order>
				</counterpoint_doc_id>
				<counterpoint_extra_info>
					<to_order>*</to_order>
				</counterpoint_extra_info>
			</sales_convert_quote>
		</fieldsets>

		<!-- <events>
			<customer_save_after>
				<observers>
					<allure_counterpoint>
						<class>allure_counterpoint/observer</class>
						<method>sendCustomerInfoToSugarcrm</method>
					</allure_counterpoint>
				</observers>
			</customer_save_after>

			<customer_address_save_after>
				<observers>
					<allure_counterpoint>
						<class>allure_counterpoint/observer</class>
						<method>sendCustomerAddressInfoToSugarcrm</method>
					</allure_counterpoint>
				</observers>
			</customer_address_save_after>

		</events> -->
	</global>
	<default>
		<allure_counterpoint>
			<general>
				<stores>0</stores>
				<debug>0</debug>
			</general>
		</allure_counterpoint>
		
		<carriers>
			<counterpoint_storepickupshipping>
				<active>1</active>
				<model>allure_counterpoint/shipping_carrier_Storepickupshipping</model>
				<name>Store Pickup</name>
				<price>0.00</price>
				<title>Store Pickup</title>
                <sallowspecific>0</sallowspecific>
                <showmethod>0</showmethod>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
			</counterpoint_storepickupshipping>
		</carriers>
		
		<payment>
			<counterpoint_cash>
                <active>1</active>
                <model>allure_counterpoint/payment_cash</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Cash</title>
                <allowspecific>0</allowspecific>
            </counterpoint_cash>
            <counterpoint_creditcard>
                <active>0</active>
                <model>allure_counterpoint/payment_cc</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Counterpoint Saved Credit/Debit Card</title>
                <allowspecific>0</allowspecific>
            </counterpoint_creditcard>
            
            <counterpoint_check>
                <active>1</active>
                <model>allure_counterpoint/payment_check</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Check</title>
                <allowspecific>0</allowspecific>
            </counterpoint_check>
            <counterpoint_gift>
                <active>1</active>
                <model>allure_counterpoint/payment_gift</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Gift</title>
                <allowspecific>0</allowspecific>
            </counterpoint_gift>
            <counterpoint_paypal>
                <active>1</active>
                <model>allure_counterpoint/payment_paypal</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Paypal</title>
                <allowspecific>0</allowspecific>
            </counterpoint_paypal>
            <counterpoint_stcr>
                <active>1</active>
                <model>allure_counterpoint/payment_stcr</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>STCR</title>
                <allowspecific>0</allowspecific>
            </counterpoint_stcr>
            <counterpoint_wholesale>
                <active>1</active>
                <model>allure_counterpoint/payment_wholesale</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Wholesale</title>
                <allowspecific>0</allowspecific>
            </counterpoint_wholesale>
            <counterpoint_wired>
                <active>1</active>
                <model>allure_counterpoint/payment_wired</model>
                <order_status>pending</order_status>
                <payment_action>authorize_capture</payment_action>
                <title>Wired</title>
                <allowspecific>0</allowspecific>
            </counterpoint_wired>
            
		</payment>
		
	</default>
</config>
