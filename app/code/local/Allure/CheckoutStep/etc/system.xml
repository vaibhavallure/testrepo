                        </wholesale_payment_methods>-->
                        
                        <wholesale_pay_now_options>
                        	<label>Pay Now Options</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>checkoutstep/customer_wholesale_paymentoptions</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Choose only selected Wholesale customer payment methods.</comment>
                        </wholesale_pay_now_options>
                        
                        <wholesale_pay_as_ship_options>
                        	<label>Pay As Ship Options</label>
                            <frontend_type>multiselect</frontend_type>
