        <!-- Multiple order email template Design add into sales email configuration start. -->
        <sales_email>
           <label>Sales Emails</label>
            <tab>sales</tab>
            <frontend_type>text</frontend_type>
            <sort_order>301</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
         	<groups>
	              <multipleorder_sales_email translate="label">
			            <label>Sales Emails Multiple Orders</label>
			            <frontend_type>text</frontend_type>
			            <sort_order>301</sort_order>
			            <show_in_default>1</show_in_default>
			            <show_in_website>1</show_in_website>
			            <show_in_store>1</show_in_store>
			            
			            <fields>
			                  <template translate="label">
			                            <label>Multiple Order Email Template</label>
			                            <frontend_type>select</frontend_type>
			                            <source_model>adminhtml/system_config_source_email_template</source_model>
			                            <sort_order>1</sort_order>
			                            <show_in_default>1</show_in_default>
			                            <show_in_website>1</show_in_website>
			                            <show_in_store>1</show_in_store>
