<config>
	<modules>
		<Allure_Pickinstore>
            <name>Allure - Pick in Store</name>
			<version>1.0.0</version>
		</Allure_Pickinstore>
	</modules>
	<global>
		<helpers>
			<allure_pickinstore>
				<class>Allure_Pickinstore_Helper</class>
			</allure_pickinstore>
		</helpers>
		<models>
			<allure_pickinstore>
				<class>Allure_Pickinstore_Model</class>
			</allure_pickinstore>
		</models>
	</global>
	<default>
		<carriers>
			<allure_pickinstore>
				<active>1</active>
				<sallowspecific>1</sallowspecific>
				<model>allure_pickinstore/pickinstore</model>
				<name>Pick In Store</name>
				<title>Pick In Store</title>
			</allure_pickinstore>
		</carriers>
	</default>
</config>
   
    
