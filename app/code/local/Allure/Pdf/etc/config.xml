<?xml version="1.0"?>
<config>
	<modules>
		<Allure_Pdf>
			<name>Allure - Pdf</name>
			<version>1.0.0</version>
		</Allure_Pdf>
	</modules>

	<global>
		<models>
			<allure_pdf>
				<class>Allure_Pdf_Model</class>
			</allure_pdf>
			
			<sales>
				<rewrite>
					<order_pdf_invoice>Allure_Pdf_Model_Sales_Order_Pdf_Invoice</order_pdf_invoice>
					<order_pdf_shipment>Allure_Pdf_Model_Sales_Order_Pdf_Shipment</order_pdf_shipment>
					<order_pdf_creditmemo>Allure_Pdf_Model_Sales_Order_Pdf_Creditmemo</order_pdf_creditmemo>
					<order_pdf_items_invoice_default>Allure_Pdf_Model_Sales_Order_Pdf_Items_Invoice_Default</order_pdf_items_invoice_default>
					<order_pdf_items_shipment_default>Allure_Pdf_Model_Sales_Order_Pdf_Items_Shipment_Default</order_pdf_items_shipment_default>
					<order_pdf_items_creditmemo_default>Allure_Pdf_Model_Sales_Order_Pdf_Items_Creditmemo_Default</order_pdf_items_creditmemo_default>
				</rewrite>
			</sales>
		</models>
		
		<helpers>
			<allure_pdf>
				<class>Allure_Pdf_Helper</class>
			</allure_pdf>
		</helpers>
		
	</global>
	
</config>
