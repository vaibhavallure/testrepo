<config>
    <sections>
        <bakerloorestful>
            <groups>
                <reports_update translate="label">
                    <label>Reports</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>80</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable automated updates (requires enabled cron)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <default_reports>
                            <label>Reports generated by default</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>bakerloo_reports/generator</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </default_reports>
                        <profile translate="label">
                            <label>Enable profiler for POS reports actions</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </profile>
                        <report_creditnotes translate="label comment">
                            <label>Show credit notes in POS reports</label>
                            <comment><![CDATA[Show credit note breakdown if POS reports have payment methods as fields.]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </report_creditnotes>
                    </fields>
                </reports_update>
            </groups>
        </bakerloorestful>
    </sections>
</config>
