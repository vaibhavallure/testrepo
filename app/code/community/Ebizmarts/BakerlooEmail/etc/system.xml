<config>
    <sections>
        <bakerloorestful>
            <groups>
                <order_emails translate="label">
                    <label>Send order emails</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>70</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <process_all>
                            <label></label>
                            <button_label>Send all queued messages</button_label>
                            <frontend_model>bakerloo_email/adminhtml_system_config_processall</frontend_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Clicking this button will cause all unsent emails to be sent now. This feature is for testing purposes ONLY.</comment>
                        </process_all>
                    </fields>
                </order_emails>
            </groups>
        </bakerloorestful>
    </sections>
</config>