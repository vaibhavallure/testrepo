<config>
    <sections>
        <tax>
            <tab>sales</tab>
            <groups>
                <avatax_document_management translate="label" module="avatax">
                    <label>AvaTax Document Management (Exemptions)</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <action translate="label comment">
                            <label>Action</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </action>
                        <ecom_title translate="label">
                            <label><![CDATA[<strong>CertCapture Api</strong>]]></label>
                            <frontend_type>label</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ecom_title>
                        <ecom_url translate="label">
                            <label>URL</label>
                            <frontend_type>select</frontend_type>
                            <source_model>avataxar2/source_ecom_url</source_model>
                            <sort_order>110</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <depends><action>1</action></depends>
                        </ecom_url>
                        <ecom_username translate="label">
                            <label>Username</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <depends><action>1</action></depends>
                        </ecom_username>
                        <ecom_password translate="label">
                            <label>Password</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <depends><action>1</action></depends>
                        </ecom_password>
                        <ecom_client_id translate="label">
                            <label>Client id</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>required-entry</validate>
                            <depends><action>1</action></depends>
                        </ecom_client_id>
                    </fields>
                </avatax_document_management>
            </groups>
        </tax>
    </sections>
</config>
