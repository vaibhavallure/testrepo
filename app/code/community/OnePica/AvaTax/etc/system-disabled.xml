<config>
    <sections>
        <tax>
            <groups>
                <classes>
                    <fields>
                        <shipping_tax_class>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </shipping_tax_class>
                    </fields>
                </classes>
                <calculation>
                    <fields>
                        <based_on>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </based_on>
                        <discount_tax>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </discount_tax>
                        <apply_tax_on>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </apply_tax_on>
                        <algorithm>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </algorithm>
                        <shipping_includes_tax>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </shipping_includes_tax>
                        <cross_border_trade_enabled>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cross_border_trade_enabled>
                        <apply_after_discount>
                            <depends>
                                <price_includes_tax>
                                    <value>0|1</value>
                                </price_includes_tax>
                            </depends>
                        </apply_after_discount>
                    </fields>
                </calculation>
                <defaults>
                    <fields>
                        <region>
                            <comment></comment>
                        </region>
                        <postcode>
                            <comment></comment>
                        </postcode>
                    </fields>
                </defaults>
                <display>
                    <fields>
                        <type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </type>
                        <shipping>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shipping>
                    </fields>
                </display>
                <sales_display>
                    <fields>
                        <full_summary>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </full_summary>
                    </fields>
                </sales_display>
            </groups>
        </tax>
    </sections>
</config>
