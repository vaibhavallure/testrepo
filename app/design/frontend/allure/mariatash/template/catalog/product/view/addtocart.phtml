<script>
    function plusMinus(elementId,plus){
        if(parseInt(jQuery(elementId).val()) + plus > 0) {
            jQuery(elementId).val(parseInt(jQuery(elementId).val()) + plus);
        }
    }
    jQuery(document).bind("keydown", function(e) {
        var code = e.keyCode || e.which;
        if (code  == 13) {
            e.preventDefault();
            return false;
        }
    });
</script>