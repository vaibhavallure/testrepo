<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php    
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    Mage::log($_category,null,'tattoo.log');
    $_imgHtml   = '';
    if ($_imgUrl = $_category->getImageUrl()) {
        if($_category->getCategoryBleed()) {
            echo '<script>
                    jQuery(document).ready(function(){
                        jQuery(".col-main").addClass("with-category-image-bleed");
                    });
                </script>';
            $_imgHtml = '<p class="category-image-bleed" style="margin:10px 0;overflow:hidden;text-align:center"><img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></p>';
        }
        else {
            echo '<script>
                    jQuery(document).ready(function(){
                        jQuery(".col-main").addClass("with-category-image");
                    });
                </script>';
            $_imgHtml = '<p class="category-image"><span style="overflow: hidden; display: block;"><img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></span></p>';
        }
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
?>
<?php if($_imgUrl): ?>
    <?php echo $_imgHtml ?>
<?php endif; ?>

