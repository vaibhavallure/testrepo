<script>

function loadMore(){
	var selector = jQuery('#order-history-page');
	var cPage = selector.attr('data-current-page');
	var tPage = selector.attr('data-total-page');
	if(cPage<=tPage){
		    showLoadingFancybox1('box-history');
		    var count = jQuery("#sales-order-count").val();
		 	jQuery.ajax({
		        url: '<?php echo Mage::getBaseUrl('web').'myaccount/index/getOrderHistory';?>',
		        dataType : 'json',
				type : 'POST',
				data: {'page':cPage,'limit':10,'count':count,'m_store':'<?php echo $_GET['m_store']?>','m_sort':'<?php echo $_GET['m_sort']?>'},
		        success: function(data) {
		        	jQuery('#my-orders-table tbody').append(data.data.html);
		        	jQuery("#total-orders-count").text(data.data.order_count);
		        	jQuery("#sales-order-count").val(data.data.order_count);
		        	hideLoadingFancybox1('box-history');
		        }
		    });
		 	cPage ++;
		 	selector.attr('data-current-page',cPage);
   }else{
   	hideLoadingFancybox();
   }
}

</script>