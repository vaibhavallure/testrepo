<script>

function wishlistRemoveItem(event){
	if(confirm("Are you sure you want to remove this product from your wishlist?")){
		var item_id = jQuery(event).attr('data-item-id');
		var form_key 	= jQuery(' #wishlist-view-form input[name="form_key"]').val();
		showLoadingFancybox();
		jQuery.ajax({
	        url: '<?php echo Mage::getBaseUrl('web').'wishlist/index/removeAjax';?>',
	        dataType : 'json',
			type : 'POST',
			data: {'item':item_id,'form_key':form_key},
	        success: function(data) {
	        	if(data.success){
	        		jQuery('#mt-wishlist-tab .collateral-box').html("");
	        		jQuery('#mt-wishlist-tab .collateral-box').html(data.html);
	        	}
	        	hideLoadingFancybox();
	        }
	    });
	}else{
		return false;
	}
}


function plusMinusToWishlist(elementId,plus){
	var qty = parseInt(jQuery(elementId).val()) + plus ;
	var form_key = jQuery(' #wishlist-view-form input[name="form_key"]').val();
    if(qty > 0) {
    	jQuery(elementId).val(qty);
        var item_id = jQuery(elementId).attr('data-item-id');
        var qtyData = {qty:qty};
        var cart={};
        cart[item_id] = qtyData;
        cart = JSON.stringify(cart);
        showLoadingFancybox();
		jQuery.ajax({
	        url: '<?php echo Mage::getBaseUrl('web').'wishlist/index/updateItemAjax';?>',
	        dataType : 'json',
			type : 'POST',
			data: {'cart':cart,'form_key':form_key},
	        success: function(data) {
	        	if(data.success){
	        		jQuery('#mt-wishlist-tab .collateral-box').html("");
	        		jQuery('#mt-wishlist-tab .collateral-box').html(data.html);
	        	}
	        	hideLoadingFancybox();
	        }
	    });
    }
}


function addWishlistItemToCart(id){
	var item_id = id;
	var form_key 	= jQuery('#wishlist-view-form input[name="form_key"]').val();
	var qty 		= jQuery("#wishlist-table #qtyid_"+id).val();
	showLoadingFancybox();
    jQuery.ajax({
        url: '<?php echo Mage::getBaseUrl('web').'wishlist/index/addCartAjax';?>',
        dataType : 'json',
		type : 'POST',
		data: {'item':item_id,'qty':qty,'form_key':form_key},
        success: function(data) {
        	if(data.success){
        		jQuery('#mt-wishlist-tab .collateral-box .my-wishlist').html("");
        		jQuery('#mt-wishlist-tab .collateral-box .my-wishlist').html(data.html);

        		jQuery('.glyphicon-shopping-cart').attr('counter',data.top_qty);
        		jQuery('#mt-cart-tab .collateral-box').html("");
	        	jQuery('#mt-cart-tab .collateral-box').html(data.cart_html);
        	}else{
	        	alert(data.message);
        	}
        	hideLoadingFancybox();
        }
    });
}

