function hideMessage(){
	jQuery('#validate_current_password').html('');
}
jQuery('#validate_current_password').html(jQuery('#invalid_password').html());

function submitAccountInfo(){
	var account_form = new VarienForm('mt-account-form-validate', false); 
	if(account_form.validator.validate()){ 
		jQuery('#mt-accountinfo-tab .messages > li').removeClass('error-msg');
		jQuery('#mt-accountinfo-tab .messages > li').removeClass('success-msg');	
		showLoadingFancybox();
		jQuery.ajax({
	        url: '<?php echo Mage::getBaseUrl('web').'customer/account/editPostAjax';?>',
	        dataType : 'json',
			type : 'POST',
			data: jQuery("#mt-account-form-validate").serialize(),
	        success: function(data) {
	        	jQuery('#mt-accountinfo-tab .messages .mt-msg').html("");
		        if(data.success){
			        var html = '<li><span>'+data.message+'</span></li>';
			        html = '<ul>'+html+'</ul>';
			        jQuery('#mt-accountinfo-tab .messages > li').html(html);
			        jQuery('#mt-accountinfo-tab .messages > li').addClass('success-msg');	
			    }else{
			    	if(data.error.constructor === Array) {
				    	var len = data.error.length;
				    	var html = '';
				    	for(var i=0;i<len;i++){
				    		html = html+'<li><span>'+data.error[i]+'</span></li>';
				    	}
				    	html = '<ul>'+html+'</ul>';
				    	jQuery('#mt-accountinfo-tab .messages > li').html(html);
				        jQuery('#mt-accountinfo-tab .messages > li').addClass('error-msg');
			    	}else{
			    		var html = '<li><span>'+data.message+'</span></li>';
			    		html = '<ul>'+html+'</ul>';
			    		jQuery('#mt-accountinfo-tab .messages > li').html(html);
				        jQuery('#mt-accountinfo-tab .messages > li').addClass('error-msg');
			    	}
			    }
		        jQuery('#mt-accountinfo-tab .messages').show();
	        	hideLoadingFancybox();
	        }
		});
	}
}
