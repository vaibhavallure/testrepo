   <checkout_onepage_allureshippingmethod>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block type="checkout/onepage_shipping_method_available" name="root" output="toHtml" template="checkoutstep/checkout/onepage/shipping_method/available.phtml"/>
    </checkout_onepage_allureshippingmethod> 
   
   
   <checkout_onepage_allurepaymentmethod>
        <remove name="right"/>
        <remove name="left"/>

        <block type="checkout/onepage_payment_methods" name="root" output="toHtml" template="checkoutstep/checkout/onepage/payment/methods.phtml">
            <action method="setMethodFormTemplate"><method>purchaseorder</method><template>payment/form/purchaseorder.phtml</template></action>
            <block type="core/template" name="checkout.onepage.payment.methods.scripts" as="scripts" />
            <block type="core/template" name="checkout.onepage.payment.methods.additional" as="additional" />
        </block>
    </checkout_onepage_allurepaymentmethod>
    
    
     <checkout_onepage_deliveryoption>
        <remove name="right"/>
        <remove name="left"/>
        <block type="checkoutstep/checkout_onepage_deliveryoption" name="root" output="toHtml" template="checkoutstep/checkout/onepage/delivery_option_details.phtml"></block>
     </checkout_onepage_deliveryoption>

     <checkout_onepage_shipment_review translate="label">
        <label>One Page Checkout Overview</label>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>
        
        <block type="checkout/onepage_review_info" name="root" output="toHtml" template="checkoutstep/checkout/onepage/review/two_shipment.phtml">
            <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkoutstep/checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkoutstep/checkout/onepage/review/item.phtml</template></action>
            <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkoutstep/checkout/onepage/review/item.phtml</template></action>
            
            <!--<block type="checkout/cart_totals" name="checkout.onepage.review.info.totals" as="totals" template="checkout/onepage/review/totals.phtml"/>-->
            
            <block type="checkout/cart_totals" name="checkout.onepage.review.info.totals_ordered" as="totals_ordered" template="checkoutstep/checkout/onepage/review/totals_ordered.phtml"/>
            
            <block type="checkout/cart_totals" name="checkout.onepage.review.info.totals_backordered" as="totals_backordered" template="checkoutstep/checkout/onepage/review/totals_backordered.phtml"/>
            
            <block type="core/text_list" name="checkout.onepage.review.info.items.before" as="items_before" translate="label">
                <label>Items Before</label>
            </block>
            <block type="core/text_list" name="checkout.onepage.review.info.items.after" as="items_after" translate="label">
                <label>Items After</label>
            </block>
             <block type="checkout/agreements" name="checkout.onepage.agreements" as="agreements" template="checkout/onepage/agreements.phtml"/>
           <block type="core/template" name="checkout.onepage.review.button" as="button" template="checkout/onepage/review/button.phtml"/>
        </block>
        
    </checkout_onepage_shipment_review>
    
    <!-- Added by mt-allure -->
    <checkout_onepage_successorder translate="label">
        <label>One Page Checkout Success</label>
        <reference name="root">
            <!--action method="setTemplate"><template>page/2columns-right.phtml</template></action-->
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="head">
            <!--action method="setTemplate"><template>page/2columns-right.phtml</template></action-->
            <action method="setTitle"><title>Your order has been received</title></action>
        </reference>
        <reference name="content">
             <block type="checkoutstep/checkout_onepage_success" name="checkout.success" template="checkoutstep/checkout/success_order.phtml"/>
        </reference>
    </checkout_onepage_successorder>


<sales_order_printorder translate="label">
        <label>Sales Order Print View</label>
        <reference name="content">
            <block type="checkoutstep/sales_order_print" name="sales.order.print" template="checkoutstep/sales/order/print.phtml">
                <action method="addItemRender"><type>default</type><block>sales/order_item_renderer_default</block><template>sales/order/items/renderer/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>sales/order_item_renderer_grouped</block><template>sales/order/items/renderer/default.phtml</template></action>
                <block type="sales/order_totals" name="order_totals" template="sales/order/totals_print.phtml">
                    <action method="setLabelProperties"><value>colspan="4" class="a-right"</value></action>
                    <action method="setValueProperties"><value>class="last a-right"</value></action>
                    <block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml">
                        <action method="setIsPlaneMode"><value>1</value></action>
                    </block>
                </block>
                
                <block type="checkoutstep/sales_order_totals" name="second_order_totals" template="sales/order/totals_print.phtml">
                    <action method="setLabelProperties"><value>colspan="4" class="a-right"</value></action>
                    <action method="setValueProperties"><value>class="last a-right"</value></action>
                    <block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml">
                        <action method="setIsPlaneMode"><value>1</value></action>
                    </block>
                </block>
                
            </block>
        </reference>
    </sales_order_printorder>
    
    
</layout>
