<?php
/**
 * Shopping cart totals template
 *
 * @see Mage_Checkout_Block_Cart_Totals
 * @var $this Mage_Checkout_Block_Cart_Totals
 */
?>
<?php $customer = Mage::getSingleton('customer/session');?>
<?php if ($this->canApplyMsrp()): ?>
<div class="cart-msrp-totals"><?php echo $this->__('ORDER TOTAL WILL BE DISPLAYED BEFORE YOU SUBMIT THE ORDER'); ?></div>
<?php else: ?>
<table id="shopping-cart-totals-table" class="totals-table">
	<col />
   	<col width="1" />
   	<?php $_checkoutHelper = Mage::helper('allure_multicheckout');?>
   	<?php $mainQuote = Mage::getSingleton('checkout/session')->getQuote();?>
    <?php if((strtolower($mainQuote->getDeliveryMethod()) == strtolower($_checkoutHelper::TWO_SHIP))):?>
    	<?php $totals1 = $this->getOrderedQuote()->getTotals();?>
        <?php $totals2 = $this->getBackorderedQuote()->getTotals(); ?>
       	<?php $grandtotal = 0; $subtotal = 0; $shipping  = 0; $discount = 0; $tax = 0;?>
       	<?php if(isset($totals1['grand_total']) && $totals1['grand_total']->getValue()):?>
       		<?php $grandtotal += $totals1['grand_total']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals2['grand_total']) && $totals2['grand_total']->getValue()):?>
       		<?php $grandtotal += $totals2['grand_total']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals1['subtotal']) && $totals1['subtotal']->getValue()):?>
       		<?php $subtotal += $totals1['subtotal']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals2['subtotal']) && $totals2['subtotal']->getValue()):?>
       		<?php $subtotal += $totals2['subtotal']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals1['shipping']) && $totals1['shipping']->getValue()):?>
       		<?php $shipping += $totals1['shipping']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals2['shipping']) && $totals2['shipping']->getValue()):?>
       		<?php $shipping += $totals2['shipping']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals1['discount']) && $totals1['discount']->getValue()):?>
       		<?php $discount += $totals1['discount']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals2['discount']) && $totals2['discount']->getValue()):?>
       		<?php $discount += $totals2['discount']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals1['tax']) && $totals1['tax']->getValue()):?>
       		<?php $tax += $totals1['tax']->getValue();?>
       	<?php endif;?>
       	<?php if(isset($totals2['tax']) && $totals2['tax']->getValue()):?>
       		<?php $tax += $totals2['tax']->getValue();?>
       	<?php endif;?>
       	<tfoot>
        	<?php if($tax != 0): ?>
       		<tr class="summary-total">
				<td>
					<div class="info-text-three">
						<span><?= $this->__('Estimated Tax') ?></span> <?php echo ($customer->getTaxCountry() && $customer->getTaxCountry() != 'US') ? sprintf('<br/><div style="font-size:90%"> (%s Sales or VAT)</div>',$customer->getTaxCountry()) : '';?>
					</div>
				</td>
				<td class="text-right">
					<span class="reg-price price"><?= $this->helper('checkout')->formatPrice($tax) ?></span>
				</td>
			</tr>
			<?php endif; ?>
        	<tr>
				<td class="cart-subtotals-left" colspan="1">
					<strong><span class="total-title"><?= $this->__('Total')?></span></strong>
				</td>
				<td class="cart-subtotals-right">
					<strong><span class="price"><?php echo $this->helper('checkout')->formatPrice($grandtotal) ?></span></strong>
				</td>
			</tr>
        </tfoot>
        <tbody>
			<tr>
				<td class="cart-subtotals-left" colspan="1">
					<span class="subtotal"><?= $this->__('Subtotal')?></span><span class="merchandise"></span>    
				</td>
				<td class="cart-subtotals-right">
					<span class="price"><?php echo $this->helper('checkout')->formatPrice($subtotal) ?></span>    
				</td>
			</tr>
			<tr id="mt-shipping">
				<td colspan="1">
					<span class="shipping-label para-normal"><?= $this->__('Shipping')?></span>
				</td>
				<td class="a-right">
					<span class="price para-normal"><?php echo $this->helper('checkout')->formatPrice($shipping) ?></span>
				</td>
			</tr>
			<?php if($discount != 0): ?>
			<tr>
				<td colspan="1" class="cart-subtotals-left">
					<span class="para-normal"><?= $this->__('Discount')?></span>
				</td>
				<td class="cart-subtotals-right">
					<span class="price para-normal"><?php echo $this->helper('checkout')->formatPrice($discount) ?></span>
				</td>
			</tr>
			<?php endif;?>
        </tbody>
        <?php else:?>
       	<tfoot>
        	<?php if (!$this->getIsVirtual()): echo $this->getChildHtml('shipping'); endif; ?>
            <?php echo $this->renderTotals('footer'); ?>
        </tfoot>
        <tbody>
        	<?php echo $this->renderTotals();?>
        </tbody>
        <?php endif;?>
    </table>
  	<?php $moduleName = Mage::app()->getRequest()->getModuleName();?>
    <?php if(strtolower($moduleName) == strtolower("checkout")):?>
   		<?php $baseGrandTotal = Mage::helper("currencymanager")->getGrandTotalWithBaseCurrency();?>
   		<?php if(!empty($baseGrandTotal)):?>
            <p class="mt-cart-charge-note">
            <?php echo $this->__("All orders are charged in USD You will be charged( ".$baseGrandTotal." )");?>
            </p>
        <?php endif;?>
 	<?php endif;?>
<?php endif; ?>
