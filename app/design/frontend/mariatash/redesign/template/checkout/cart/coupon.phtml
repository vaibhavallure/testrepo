<form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost', array('_secure' =>  (bool) Mage::app()->getFrontController()->getRequest()->isSecure())) ?>" method="post">
    <div class="discount">
        <div class="discount-form">
            <input type="hidden" name="remove" id="remove-coupone" value="0" />
            <div class="input-cart position-relative">
                <input class="input-text position-relative" id="coupon_code2" name="coupon_code" placeholder="Promo Code" value="<?php echo $this->htmlEscape($this->getCouponCode()) ?>" <?php echo (strlen($this->getCouponCode())) ? 'disabled' : '';?>/>
                <?php if(strlen($this->getCouponCode())): ?>
                    <button type="button" title="<?php echo $this->__('X') ?>" class="button_coupon right-cart-coupon" onclick="discountForm.submit(true)" value="<?php echo $this->__('Cancel Coupon') ?>"><span><span><?php echo $this->__('X') ?></span></span></button>
                <?php endif; ?>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
//<![CDATA[
var discountForm = new VarienForm('discount-coupon-form');
Validation.add('emptycustomvalidation','<?php echo $this->__('This is a required field');?>',function(myInput){
    if( myInput != '' )
    {
        return true;
    }
    return false;
});

discountForm.submit = function (remove) {
    $('coupon_code2').addClassName('required-entry');
    $('coupon_code2').addClassName('emptycustomvalidation');
    $('remove-coupone').value = "0";
    if (this.validator.validate()) {
        if (remove) {
            $('coupon_code2').removeClassName('required-entry');
            $('remove-coupone').value = "1";
        } else {
            $('coupon_code2').addClassName('required-entry');
            $('coupon_code2').addClassName('emptycustomvalidation');
            $('remove-coupone').value = "0";
        }
        return VarienForm.prototype.submit.bind(discountForm)();
    }
        return false;
}
//]]>

    jQuery("#coupon_code2").blur(function() {
        if(jQuery("#coupon_code2").val()!= ''){
        	discountForm.submit();
        }
    });
</script>
