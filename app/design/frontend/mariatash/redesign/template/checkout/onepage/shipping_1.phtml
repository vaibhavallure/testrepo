<script type="text/javascript">
    //<![CDATA[
    function initializeItelTelInput() {
        var utilPath = "<?= Mage::getDesign()->getSkinUrl(); ?>js/phone_validation/utils.js";

        //initialize itel tel input
        var input = document.querySelector(".shipping-itel-tel-cstm");
        var iti = window.intlTelInput(input, {
            autoFormat: false,
            autoHideDialCode: false,
            autoPlaceholder: false,
            nationalMode: false,
            utilsScript: utilPath
        });

        // take phone number and check if it exist
        // if it does not exist then
        // first check if we can get Geo Location based Country Code if its there then set it
        // otherwise set default as country as 'us'
        // Magento module - Allure/GeoLocation

        var country_code = "<?= Mage::getSingleton('allure_geolocation/geoLocation')->getCountryCode();?>";

        if (country_code == undefined || country_code == null || country_code == "")
            country_code = "us"

        iti.setCountry(country_code.toLowerCase());

        //custom validator for itel tel input
        //FileName - intel-tel-validation.js
        allureIntlTelValidate(jQuery(".shipping-itel-tel-cstm"), iti);
    }

    jQuery(document).ready(function () {
        jQuery('.checkout-multishipping-address-newshipping').addClass('checkout-multishipping-address-newbilling');
        initializeItelTelInput();

        //set first option of country as placeholder
        jQuery('.country-section select option[value=""]').text("Country*");
		if(jQuery('.country-section select option[value=""]')){
        	jQuery('.country-section select').addClass('select-country-placeholder');
		}

		//check billing & shipping address is same or not.
		var billingAddressId = jQuery('#shipping-address-select').val();
		var shippingAddressId = jQuery('#billing-address-select').val();
		if(billingAddressId && shippingAddressId){
			if(billingAddressId == shippingAddressId){
				jQuery('input[type=shipping[same_as_billing]]').is(":checked")
			}
		}

		jQuery('.country-section select[name="billing[country_id]"]').on('change',function(){
			if(jQuery(this).val() == ''){
				jQuery(this).addClass('select-country-placeholder');
			}else{
				jQuery(this).removeClass('select-country-placeholder');
			}
		});

    });

    function updatePoscodeShipping(obj) {
        jQuery('#advice-validate-zip-international-shipping\\:postcode').addClass('display_none');
        if (jQuery(obj).val() != 'US') {
            jQuery('#shipping\\:postcode').removeClass("validate-zip-international");
        } else {
            jQuery('#shipping\\:postcode').addClass("validate-zip-international");
        }
    }

    var shipping = new Shipping('co-shipping-form', '<?php echo $this->getUrl('checkout/onepage/getAddress') ?>address/', '<?php echo $this->getUrl('checkout/onepage/saveShipping') ?>',
        '<?php echo $this->getUrl('checkout/onepage/shippingMethod') ?>');
    var shippingForm = new VarienForm('co-shipping-form');
    shippingForm.extraChildParams = ' onchange="shipping.setSameAsBilling(false);"';
    shippingForm.setElementsRelation('shipping:country_id', 'shipping:region', '<?php echo $this->getUrl('directory/json/childRegion') ?>', '<?php echo $this->__('Select State/Province...') ?>');
    Validation.add('validate-per-page-value', '<?php echo $this->__('Please enter a valid value from list')?>', function (v, elm) {
        if (Validation.get('IsEmpty').test(v)) {
            return false;
        }
        var values = $(elm.id + '_values').value.split(',');
        return values.indexOf(v) != -1;
    });

    $('shipping-address-select') && shipping.newAddress(!$('shipping-address-select').value);
    var shippingRegionUpdater = new RegionUpdater('shipping:country_id', 'shipping:region', 'shipping:region_id', <?php echo $this->helper('directory')->getRegionJson() ?>, undefined, 'shipping:postcode');
    //]]>
</script>
