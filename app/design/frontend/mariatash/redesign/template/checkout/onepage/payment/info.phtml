<dl class="sp-methods" id="checkout-payment-method-load">
   <!-- Content dynamically loaded. Content from the methods.phtml is loaded during the ajax call -->
</dl>

<script>
$j(document).ready(function(){
	$j('#wholeseller-payment-methods li').click(function(){
		$j(this).find('input').attr('checked',true);
		if($j(this).hasClass('pay_now_li')){
			$j('#checkout-payment-method-load dt').css('display','block');
			$j('#checkout-payment-method-load dd').css('display','block');
		}else{
			$j('#checkout-payment-method-load dt').css('display','none');
			$j('#checkout-payment-method-load dd').css('display','none');
			$j('#dt_method_ccsave').css('display','block');
			$j('#dd_method_ccsave').css('display','block');
		}
	});
});
</script>
