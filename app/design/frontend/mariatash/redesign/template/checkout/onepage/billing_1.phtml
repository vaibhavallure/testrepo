    function updatePoscodeBilling(obj) {
        jQuery('#advice-validate-zip-international-billing\\:postcode').addClass('display_none');
        if (jQuery(obj).val() != 'US') {
            jQuery('#billing\\:postcode').removeClass("validate-zip-international");
        } else {
