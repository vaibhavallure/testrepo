?>
<?php $steps = Mage::getSingleton('checkout/type_multishipping_state')->getSteps();?>
<?php $cnt = 1;?>
<script type="text/javascript">
function setShippingAddress(eleId, addrId ,custAddrId){
	var ele = jQuery("#"+eleId+" .ship-select");
	ele.attr('name','shipping[ship_address]['+addrId+']');
	ele.val(custAddrId);
	jQuery("#"+eleId+" .ship-select option[value="+custAddrId+"]").attr('selected','selected');
}
</script>
<ol id="checkoutSteps" class="opc">
    <?php foreach ($steps as $stepKey => $_step): ?>
        <?php if($stepKey == 'multishipping_shipping'): ?>
            <li id="opc-<?=$stepKey?>" title="<?= $_step->getLabel() ?>" class="section allow active" >
                <div class="step-title">
                    <span class="number"><?php echo $cnt ?></span>
                    <h2><?= $this->__($_step->getLabel()) ?></h2>
                </div>
                <div class="multiple-checkout">
                    <div class="page-title">
                        <h3><?php echo $this->__('Select Shipping Method') ?></h3>
                    </div>
                    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
                    <form action="<?php echo $this->getPostActionUrl() ?>" method="post" id="shipping_method_form">
                        <?php $shipAddressHtml = $this->getChildHtml("checkout_shipping_address_select");?>
                        <?php $shippingConfig = array();?>
                        <?php foreach ($this->getAddresses() as $_index => $_address): ?>
						<div class="box">
							<div class="box-title">
                           	<?php echo $this->__('Address %s of %s', ($_index+1), $this->getAddressCount()) ?><a href="<?php echo $this->getAddressEditUrl($_address) ?>"><?php echo $this->__('Change') ?></a>
                            </div>
                            <div class="box-content">
                            
                            	<div class="col2-set">
                                    <div class="gift-messages">
                                     	<p class="control">
											<input data-address_id="<?= $_address->getId()?>" type="checkbox" name="no_signature_delivery[<?= $_address->getId()?>]" id="no_signature_delivery_<?= $_address->getId()?>" value="1" class="checkbox shipping-signature" checked="checked" />
            								<label for="no_signature_delivery_<?= $_address->getId()?>"><?php echo $this->__('Require signature upon delivery.View <a class="fancybox fancybox.iframe scl-popup" style="color:#3f4048 !important; text-decoration: underline !important;" href="/shipping-policy-popup">shipping policy</a>.') ?></label>                                       
            							</p>
                                    </div>
                            	</div>
                            
    							<div id="shipping-address-<?=$_index?>-<?=$_address->getId()?>">
    							<?= $shipAddressHtml?>
                            	</div>
                            </div>
                        </div>
                        
                        <div class="box">
                            <div class="box-content">
                          	<?php if (!($_shippingRateGroups = $this->getShippingRates($_address))): ?>
                            	<p><?php echo $this->__('The information you entered does not match any known address with Fedex. Please check your shipping addresses for any errors.') ?></p>
                            <?php else: ?>
                            	<select id="select-shipping-method-<?= $_address->getId()?>" name="shipping_method[<?= $_address->getId() ?>]" data-country="<?= $_address->getCountryId()?>">
                           		<?php $shippingRates = array();?>
                           		<?php foreach ($_shippingRateGroups as $code => $_rates): ?>
                            	<?php foreach ($_rates as $_rate): ?>
                                	<?php if ($_rate->getErrorMessage()): ?>
                                    <?php //echo $this->escapeHtml($_rate->getCarrierTitle()) ?>: <?php echo $this->escapeHtml($_rate->getErrorMessage()) ?>
                                    <?php else: ?>
                                    <?php ?>
                                    <?php $shippingRates[$_rate->getCode()] = $_rate->getData();?>
                                       <option value="<?= $this->htmlEscape($_rate->getCode()) ?>">
                                           <?= $this->escapeHtml($this->getCarrierName($code))?>-<?= $this->escapeHtml($_rate->getMethodTitle()) ?>
                                           <?php $_excl = $this->getShippingPrice($_address, $_rate->getPrice(), $this->helper('tax')->displayShippingPriceIncludingTax()); ?>
                                           <?php $_incl = $this->getShippingPrice($_address, $_rate->getPrice(), true); ?>
                                           <?php echo $_excl; ?>
                                           <?php if ($this->helper('tax')->displayShippingBothPrices() && $_incl != $_excl): ?>
                                           (<?php echo $this->__('Incl. Tax'); ?> <?php echo $_incl; ?>)
                                           <?php endif; ?>
                                       </option>
                                  	<?php endif ?>
                            	<?php endforeach; ?>
              					<?php endforeach; ?>
                      		</select>
                      		<?php $shippingConfig[$_address->getId()] = $shippingRates;?>
                      		<?php endif; ?>
                        </div>
                    </div>
                        
                        <script type="text/javascript">setShippingAddress('shipping-address-<?=$_index?>-<?=$_address->getId()?>', <?=$_address->getId()?> ,<?=$_address->getCustomerAddressId()?>)</script>
                        <?php endforeach; ?>
                        <?php echo $this->getChildHtml('checkout_billing_items') ?>
                        <div class="buttons-set">
                            <p class="back-link"><a href="<?php echo $this->getBackUrl() ?>"><small>&laquo; </small><?php echo $this->__('Back to Select Addresses') ?></a></p>
                            <button class="button continue" type="submit" title="<?php echo $this->__('Next') ?>" class="button"><span><span><?php echo $this->__('Next') ?></span></span></button>
                        </div>
						<?php echo $this->getBlockHtml("formkey") ?>
                    </form>
                </div>
            </li>
        <?php else: ?>
            <?php if($stepKey == 'multishipping_addresses'):?>
                <li id="opc-<?= $stepKey?>" title="<?= $_step->getLabel() ?>" class="section" >
                 	<a href="<?= $this->getBaseUrl() .'checkout/multishipping/addresses/' ?>">
                     	<div class="step-title">
                        	<span class="number"><?= $cnt ?></span>
                        	<h2><?= $this->__($_step->getLabel()) ?></h2>
                       	</div>
                    </a>
                </li>
            <?php else:?>
            	<li id="opc-billing" title="<?= $_step->getLabel() ?>" class="section" >
                	<div class="step-title">
                   		<span class="number"><?= $cnt ?></span>
                    	<h2><?= $_step->getLabel() ?></h2>
                    </div>
                </li>
            <?php endif;?>
        <?php endif; ?>
    <?php $cnt++; ?>
    <?php endforeach; ?>
</ol>
