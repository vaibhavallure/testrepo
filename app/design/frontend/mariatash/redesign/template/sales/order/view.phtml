<script>
	function backToOrderPage(evt){
		var type = window.location.hash.substr(1);
		if(type!="" && type!="undefined" && type!=null){
			var url = jQuery(evt).attr('data-url');
			url = url + '#'+type;
			window.location.href = url;
		}else{
			window.location.href = '<?php echo Mage::getBaseUrl('web').'myaccount/#receipt';?>';
		}
	}
		
</script>