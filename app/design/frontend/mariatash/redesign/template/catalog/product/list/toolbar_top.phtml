<script>
    var loading = false;
    function reloadFilters(page, limit, clicked) {
        jQuery('div#loaderProducts').addClass('showLoader').removeClass('hideLoader');
        var codes = ["<?php echo implode('","', $codes) ?>"];
        var price = 0;
        var apparel_size, finger_ring_size, metals_and_gemstones, familycolor, material, mode = '0';
        var this_limit;
        jQuery.each(codes, function (key, value) {
            switch (value) {
                case 'price':
                    price = jQuery('#priceRange').val().replace(';', '-');
                    break;
                case 'familycolors':
                    familycolor = getCheckedValues(jQuery('input.colors-family-option:checked'));
                    break;
                case 'apparel_size':
                    apparel_size = getCheckedValues(jQuery('input.apparel_size-option:checked'));
                    break;
                case 'finger_ring_size':
                    finger_ring_size = getCheckedValues(jQuery('input.finger_ring_size-option:checked'));
                    break;
                //case 'size': size = getCheckedValues(jQuery('input.size-option:checked')); break;
                case 'metals_and_gemstones':
                    metals_and_gemstones = getCheckedValues(jQuery('input.metals_and_gemstones-option:checked'));
                    break;
                <?php if(isset($filters['category'])): ?>
                case 'category':
                    cat = getCheckedValues(jQuery('input.category-option:checked'));
                    break;
                <?php endif; ?>
            }
        });

        if (limit == false) {
            this_limit = jQuery('#limitPage').attr('limit');
        }
        else {
            this_limit = limit;
        }
        ;

        var data2Send = {
            price: price,
            attribute: jQuery('input.colors-family-option:checked').attr('attribute'),
            //size: size,
            apparel_size: apparel_size,
            finger_ring_size: finger_ring_size,
            color: familycolor,
            p: page,
            metals_and_gemstones: metals_and_gemstones,
            <?php if(isset($filters['category'])): ?>cat: cat, <?php endif; ?>
            limit: this_limit,
            mode: jQuery('div.grids a.active').attr('mode'),
            id: <?php echo ($category) ? $category->getId() : "''" ?>
        }

        jQuery('div#productsContainer').load(
            '<?php echo ($category) ? $this->getUrl('ecpcategory/products/get/') : $this->getUrl('ecpcategory/search/index/') ?>?q=<?php echo str_replace(' ','%20',$this->getRequest()->getParam('q')) ?>',
            data2Send,
            function () {
                jQuery('div#loaderProducts').addClass('hideLoader').removeClass('showLoader');

//            if(jQuery(clicked).parent().attr('class')=='view-all'){
//                jQuery('.view-all').hide();
//                jQuery('.view-less').show();
//            }else if(jQuery(clicked).parent().attr('class')=='view-less'){
//                jQuery('.view-all').show();
//                jQuery('.view-less').hide();
//            }
            }
        );

    }

    function getCheckedValues(items) {
        var tmp = [];
        jQuery(items).each(function (k, item) {
            tmp.push(jQuery(item).val());
        });
        return tmp.join(',');
    }

    function clearAllFilters() {
        jQuery('span.attribute-selected').each(function (index) {
            jQuery('#' + jQuery(this).attr('value')).attr('checked', false);
            jQuery(this).remove();
        });
        jQuery('div#clearAll').hide();
        reloadFilters();
    }

    jQuery('a.mode').click(function () {
        jQuery('a.mode').removeClass('active');
        jQuery(this).addClass('active');
        reloadFilters();
    });

    jQuery('div#clearAll').click(function () {
        clearAllFilters();
    });

    function removeMe(obj) {
        jQuery('#' + jQuery(obj).attr('value')).attr('checked', false);
        jQuery(obj).remove();
        if (jQuery('.attribute-selected').length == 0) {
            jQuery('#clearAll').hide();
        }
        reloadFilters();
    }
</script>