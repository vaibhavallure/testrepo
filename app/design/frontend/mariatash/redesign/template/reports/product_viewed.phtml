<?php if ($_products = $this->getRecentlyViewedProducts()): ?>

    <div class="block block-list block-viewed w-100">

        <div class="block-content recently-view">

            <div class="image_carousel">
                <div class="block-title text-uppercase mb-3">
                    <span class="para-bold"><?php echo $this->__('Recently Viewed') ?></span>
                </div>
                <ul id="recently-viewed-items-slider" class="owl-carousel owl-theme">
                    <?php foreach ($_products as $_item): ?>
                        <li class="item">
                            <a href="<?php echo $this->getProductUrl($_item) ?>">
                                <img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(280,362) ?>" alt="<?php echo $_item->getName() ?>" />
                            </a>
                        </li>
                    <?php endforeach; ?>
                </ul>
                <div class="clearfix"></div>
            </div>
            <script type="text/javascript">
                jQuery(document).ready(function() {
                    var $ =  jQuery;
                	$('#recently-viewed-items-slider').owlCarousel({
                	    loop:true,
                	    margin:10,
                	    responsiveClass:true,
                	    responsive:{
                	        0:{
                	            items:1,
                	            nav:true
                	        },
                	        600:{
                	            items:3,
                	            nav:false
                	        },
                	        1000:{
                	            items:4,
                	            nav:true,
                	            loop:false
                	        }
                	    }
                	});
                });
            </script>
        </div>
    </div>
    <script>
        jQuery(document).ready(function () {

            jQuery(".for-bottom-space").addClass("p-5");
            jQuery(".product-detail-parent").css("padding-bottom", "0px");
        });
    </script>

<?php endif; ?>
