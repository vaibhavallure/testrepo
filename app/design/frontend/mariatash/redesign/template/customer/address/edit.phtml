jQuery(document).ready(function(){
    var utilPath = "<?= Mage::getDesign()->getSkinUrl(); ?>js/phone_validation/utils.js";

        //initialize itel tel input
        var input = document.querySelector("#phone")
        var iti = window.intlTelInput(input, {
            autoFormat: false,
            autoHideDialCode: false,
            autoPlaceholder: false,
            nationalMode: false,
            utilsScript: utilPath
        });

        // take phone number and check if it exist
        // if it does not exist then
        // first check if we can get Geo Location based Country Code if its there then set it
        // otherwise set default as country as 'us'
        // Magento module - Allure/GeoLocation
        var phone = "<?php echo $this->escapeHtml($this->getAddress()->getTelephone()) ?>";
        if(phone.length <=0){
            var country_code = "<?= Mage::getSingleton('allure_geolocation/geoLocation')->getCountryCode();?>";

            if(country_code == undefined || country_code == null || country_code == "")
                country_code = "us"

            iti.setCountry(country_code.toLowerCase());
        }


        //custom validator for itel tel input
        //FileName - intel-tel-validation.js
        allureIntlTelValidate(jQuery("#phone"),iti);

        jQuery.noConflict();
        /* jQuery("#createaccCheck").live('click',function(event){
            jQuery(".pwdBlock").toggle("show");
        }); */

        if(jQuery('#country').val() !='US') {
            jQuery('#zip').removeClass( "validate-zip-international");
        } else {
            jQuery('#zip').addClass( "validate-zip-international");
        }
        jQuery('#country').change(function(){
            jQuery('#advice-validate-zip-international-zip').addClass('display_none');
            if(jQuery(this).val() !='US') {
                jQuery('#zip').removeClass( "validate-zip-international");
            } else {
                jQuery('#zip').addClass( "validate-zip-international");
            }
            regionUpdater.update();

        });
        jQuery('.checkout-multishipping-address-newbilling').addClass('checkout-multishipping-address-newshipping');

        jQuery('form').submit(function(e) {
            if (regionUpdater._checkRegionRequired()) {
                jQuery('#region_id').parent().find('.ajax-error-messages').remove();
            }
        });
    });
