 */
?>
<?php if ($this->displayBoth()):?>
<tr id="mt-shipping">
    <td style="<?php echo $this->getStyle() ?>" class="" colspan="<?php echo $this->getColspan(); ?>">
         <?php echo '<span class="shipping-label">'.$this->__('Shipping').'</span>'.'<span class="non-shipping-label">'.str_replace('United Parcel Service','UPS',$this->getExcludeTaxLabel()).'</span>' ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="text-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingExcludeTax()) ?>
    </td>
</tr>
<tr id="mt-shipping">
    <td style="<?php echo $this->getStyle() ?>" class="" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo '<span class="shipping-label">'.$this->__('Shipping').'</span>'.'<span class="non-shipping-label">'.str_replace('United Parcel Service','UPS',$this->getIncludeTaxLabel()).'</span>' ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="text-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingIncludeTax()) ?>
    </td>
</tr>
<?php elseif($this->displayIncludeTax()) : ?>
<tr id="mt-shipping">
    <td style="<?php echo $this->getStyle() ?>" class="" colspan="<?php echo $this->getColspan(); ?>">
        <?php echo '<span class="shipping-label">'.$this->__('Shipping').'</span>'.'<span class="non-shipping-label">'.str_replace('United Parcel Service','UPS',$this->getTotal()->getTitle()).'</span>' ?>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="text-right">
        <?php echo $this->helper('checkout')->formatPrice($this->getShippingIncludeTax()) ?>
    </td>
</tr>
<?php else:?>
<tr id="mt-shipping">
    <?php
    $multiShip = $this->getShippingExcludeTax();
    if($this->getRequest()->getActionName() == 'refreshtotals') {
    $totalShip = $this->getShippingExcludeTax();
    $totalsObj = Mage::getSingleton('checkout/session')->getQuote()->getTotals();

    if(isset($totalsObj['shipping'])&& $totalsObj['shipping']->getValue()) {
            $ship = $totalsObj['shipping']->getValue();
    }
    if($ship >= $totalShip){
        $multiShip = $ship;
    }else{
        $multiShip = $totalShip;
    }
    }
    ?>
    <td style="<?php echo $this->getStyle() ?>" class="" colspan="<?php echo $this->getColspan(); ?>">
        <a <?php if($this->getRequest()->getControllerName() == 'cart' && $this->getRequest()->getActionName() != 'refreshtotals') { echo ' href="#inline" id="mt-shipping-method-fancybox"'; } else {  }?> class="mt-shipping-method"><?php echo '<span class="shipping-label">'.$this->__('Shipping').'</span>'?></a>
    </td>
    <td style="<?php echo $this->getStyle() ?>" class="text-right">
        <a <?php if($this->getRequest()->getControllerName() == 'cart' && $this->getRequest()->getActionName() != 'refreshtotals') { echo ' href="#inline" id="mt-shipping-price-fancybox"'; } else { }?> class="mt-shipping-price reg-price"><?php echo $this->helper('checkout')->formatPrice($multiShip) ?></a>
    </td>
</tr>
<?php endif;?>
