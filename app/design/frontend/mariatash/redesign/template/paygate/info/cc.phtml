<?php if (!$this->getHideTitle()): ?>
    <strong><?php echo $this->htmlEscape($this->getMethod()->getTitle()) ?></strong><br/>
<?php endif;?>

<?php
    $cards = $this->getCards();
    $showCount = count($cards) > 1;
?>

<?php foreach ($cards as $key => $card): ?>
    <?php if ($showCount): ?>
    <span><?php echo sprintf($this->__('Credit Card %s'), $key + 1); ?></span>
    <?php endif;?>

        <?php foreach ($card as $_label => $_value):?>
        <br/><b><?php echo $this->escapeHtml($_label)?>: </b>
         <?php echo nl2br(implode($this->getValueAsArray(strip_tags($_value), true), "\n"))?>
        <?php endforeach; ?>
<?php endforeach; ?>