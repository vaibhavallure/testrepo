<layout version="0.1.0">
<!--
Default layout, loads most of the pages
-->

    <default>
        <reference name="footer">
            <block type="cms/block" name="cms_footer_links" before="footer_links">
                <!--
                    The content of this block is taken from the database by its block_id.
                    You can manage it in admin CMS -> Static Blocks
                -->
                <action method="setBlockId"><block_id>footer_links</block_id></action>
            </block>
        </reference>
    </default>
    
    <cms_page translate="label">
        <label>CMS Pages (All)</label>
        <reference name="content">
            <block type="core/template" name="page_content_heading" template="cms/content_heading.phtml"/>
            <block type="page/html_wrapper" name="cms.wrapper" translate="label">
                <label>CMS Content Wrapper</label>
                <action method="setElementClass"><value>std</value></action>
                <block type="cms/page" name="cms_page"/>
            </block>
        </reference>
    </cms_page>

    <cms_index_index translate="label">
        <label>CMS Home Page</label>
            <reference name="head">
                    <action method="removeItem"><type>skin_js</type><name>js/selectboxit/selectboxit.js</name></action>

                    <action method="removeItem"><type>js</type><name>ecp/addtocart.js</name></action>	
                 <!--   <action method="removeItem"><type>js</type><name>belvg/jquery.easing-1.3.pack.js</name></action>-->
                    <action method="removeItem"><type>js</type><name>selectivizr.js</name></action>
                    <action method="removeItem"><type>js</type><name>priceslider/jquery.slider.js</name></action>
                    <action method="removeItem"><type>js</type><name>priceslider/draggable-0.1.js</name></action>
                    <action method="removeItem"><type>js</type><name>priceslider/tmpl.js</name></action>
                    <action method="removeItem"><type>js</type><name>jquery/jquery.mCustomScrollbar.concat.min.js</name></action>
                    <action method="removeItem"><type>js</type><name>scriptaculous/dragdrop.js</name></action> 
                    <action method="removeItem"><type>js</type><name>varien/menu.js</name></action>   
                    <action method="removeItem"><type>js</type><name>lib/ccard.js</name></action>   
                    
                    <action method="removeItem"><type>skin_css</type><name>css/webtexgiftcards.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/easytabs.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/tattoo.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/fancybox/jquery.fancybox.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/quickview/scroll/jquery.mCustomScrollbar.css</name></action>
                    
                    <!-- <action method="removeItem"><type>skin_css</type><name>css/styles.css</name></action> -->
                    <!-- <action method="removeItem"><type>skin_css</type><name>css/tipped.css</name></action> -->
                    <action method="removeItem"><type>skin_css</type><name>css/widgets.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/tashtv.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/styles_celeb.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/press.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/piercing-service.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/customer_care.css</name></action>
