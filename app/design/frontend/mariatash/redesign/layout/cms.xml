                    <action method="removeItem"><type>skin_css</type><name>css/frecuently_asked.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/try_on.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/contact-mt.css</name></action>
                    <action method="removeItem"><type>skin_css</type><name>css/styles-form-mt.css</name></action>
                    <!-- <action method="removeItem"><type>skin_css</type><name>css/jslider.css</name></action> -->
                    <!-- <action method="removeItem"><type>skin_css</type><name>css/jslider.plastic.css</name></action> -->
