<layout version="0.1.0">
    <default>
        <reference name="head">            
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/jqueryDd.noconflict.js</js></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/jquery.easing-1.3.pack.js</js></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/doTimeout/jquery.ba-dotimeout.min.js</js></action>
            <action method="addItem" ifconfig="ddmenu/settings/enabled"><type>skin_js</type><name>js/ecp/belvg/ddmenu.js</name><params/><if/></action>
            <action method="addCss"  ifconfig="ddmenu/settings/enabled"><stylesheet>css/ecp/belvg/ddmenu.css</stylesheet></action>
        </reference>

        <reference name="catalog.topnav">
            <block type="ddmenu/navigation_lastproduct"     name="ddmenu.last.product"     as="ddmenu_last_product"     template="ecp/ddmenu/navigation/top/last_product.phtml"/>
            <block type="ddmenu/navigation_categoryfriends" name="ddmenu.category.friends" as="ddmenu_category_friends" template="ecp/ddmenu/navigation/top/category_friends.phtml"/>
            <block type="ddmenu/navigation_staticblock"     name="ddmenu.static.block"     as="ddmenu_static_block"/>
        </reference>
        <reference name="before_body_end">
            <block type="core/template" name="ddmenu.decorate">
                <action method="setTemplate" ifconfig="ddmenu/settings/enabled">
                    <template>ecp/ddmenu/decorate.phtml</template>
                </action>
            </block>
        </reference>
    </default>

</layout>
