<layout>
	<default>
		<reference name="head">

			<!--<action method="addItem">
				<type>js</type>
				<name helper="findify/data/getJsFileName" ></name>
			</action>-->
			<action method="addCss">
                 <stylesheet>css/findify.css</stylesheet>
            </action>
			<action method="addCss">
				<stylesheet>css/fancybox/jquery.fancybox.css</stylesheet>
			</action>
			<block type="core/template" name="findify_tooltips" template="findify/findify_tooltip.phtml"/>
    	</reference>
		<reference name="header">
            <block type="core/template" name="top.search" as="topSearch" template="findify/form.mini.phtml"/>
        </reference>
	</default>


	<catalog_product_view>
        <reference name="content">
		    <block type="core/template" name="findify_tracking_code" template="findify/product_view.phtml" after="-"></block>
		</reference>
	</catalog_product_view>
	<checkout_onepage_success translate="label">
        <reference name="content">
		    <block type="core/template" name="findify_tracking_code" template="findify/checkout_success.phtml" after="-"></block>
		</reference>
    </checkout_onepage_success>
</layout>
