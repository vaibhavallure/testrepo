<?xml version="1.0"?>
<layout version="0.1.0">
	<checkout_onepage_allureshippingmethod>
		<!-- Mage_Checkout -->
		<remove name="right" />
		<remove name="left" />

		<block type="checkout/onepage_shipping_method_available" name="root" output="toHtml"
			template="allure/multicheckout/checkout/onepage/shipping_method/available.phtml" />
	</checkout_onepage_allureshippingmethod>

	<checkout_onepage_allurepaymentmethod>
		<remove name="right" />
		<remove name="left" />

		<block type="checkout/onepage_payment_methods" name="root" output="toHtml"
			template="allure/multicheckout/checkout/onepage/payment/methods.phtml">
			<action method="setMethodFormTemplate">
				<method>purchaseorder</method>
				<template>payment/form/purchaseorder.phtml</template>
			</action>
			<block type="core/template" name="checkout.onepage.payment.methods.scripts" as="scripts" />
			<block type="core/template" name="checkout.onepage.payment.methods.additional" as="additional" />
		</block>
	</checkout_onepage_allurepaymentmethod>

	<checkout_onepage_deliveryoption>
		<remove name="right" />
		<remove name="left" />
		<block type="allure_multicheckout/checkout_onepage_deliveryoption" name="root" output="toHtml"
			template="allure/multicheckout/checkout/onepage/delivery_option_details.phtml"></block>
	</checkout_onepage_deliveryoption>

	<checkout_onepage_shipment_review translate="label">
		<label>One Page Checkout Overview</label>
		<!-- Mage_Checkout -->
		<remove name="right" />
		<remove name="left" />

		<block type="checkout/onepage_review_info" name="root" output="toHtml"
			template="allure/multicheckout/checkout/onepage/review/two_shipment.phtml">
			<action method="addItemRender">
				<type>default</type>
				<block>checkout/cart_item_renderer</block>
				<template>allure/multicheckout/checkout/onepage/review/item.phtml</template>
			</action>
			<action method="addItemRender">
				<type>grouped</type>
				<block>checkout/cart_item_renderer_grouped</block>
				<template>allure/multicheckout/checkout/onepage/review/item.phtml</template>
			</action>
			<action method="addItemRender">
				<type>configurable</type>
				<block>checkout/cart_item_renderer_configurable</block>
				<template>allure/multicheckout/checkout/onepage/review/item.phtml</template>
			</action>

			<!--<block type="checkout/cart_totals" name="checkout.onepage.review.info.totals" as="totals" template="checkout/onepage/review/totals.phtml"/> -->

			<block type="checkout/cart_totals" name="checkout.onepage.review.info.totals_ordered" as="totals_ordered"
				template="allure/multicheckout/checkout/onepage/review/totals_ordered.phtml" />

			<block type="checkout/cart_totals" name="checkout.onepage.review.info.totals_backordered" as="totals_backordered"
				template="allure/multicheckout/checkout/onepage/review/totals_backordered.phtml" />

			<block type="core/text_list" name="checkout.onepage.review.info.items.before" as="items_before" translate="label">
				<label>Items Before</label>
			</block>
			<block type="core/text_list" name="checkout.onepage.review.info.items.after" as="items_after" translate="label">
				<label>Items After</label>
			</block>
			<block type="checkout/agreements" name="checkout.onepage.agreements" as="agreements" template="checkout/onepage/agreements.phtml" />
			<block type="core/template" name="checkout.onepage.review.button" as="button" template="checkout/onepage/review/button.phtml" />
		</block>

	</checkout_onepage_shipment_review>

	<!-- Added by mt-allure -->
	<checkout_onepage_successorder translate="label">
		<label>One Page Checkout Success</label>
		<reference name="root">
			<!--action method="setTemplate"><template>page/2columns-right.phtml</template></action -->
			<action method="setTemplate">
				<template>page/checkout/1column.phtml</template>
			</action>
		</reference>
		<reference name="head">
			<!--action method="setTemplate"><template>page/2columns-right.phtml</template></action -->
			<action method="setTitle">
				<title>Your order has been received</title>
			</action>
		</reference>
		<reference name="content">
			<block type="allure_multicheckout/checkout_onepage_success" name="checkout.success" template="allure/multicheckout/checkout/success_order.phtml" />
		</reference>
	</checkout_onepage_successorder>

	<sales_order_printorder translate="label">
		<label>Sales Order Print View</label>
		<reference name="content">
			<block type="allure_multicheckout/sales_order_print" name="sales.order.print" template="allure/multicheckout/sales/order/print.phtml">
				<action method="addItemRender">
					<type>default</type>
					<block>sales/order_item_renderer_default</block>
					<template>sales/order/items/renderer/default.phtml</template>
				</action>
				<action method="addItemRender">
					<type>grouped</type>
					<block>sales/order_item_renderer_grouped</block>
					<template>sales/order/items/renderer/default.phtml</template>
				</action>
				<block type="sales/order_totals" name="order_totals" template="sales/order/totals_print.phtml">
					<action method="setLabelProperties">
						<value>colspan="4" class="a-right"</value>
					</action>
					<action method="setValueProperties">
						<value>class="last a-right"</value>
					</action>
					<block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml">
						<action method="setIsPlaneMode">
							<value>1</value>
						</action>
					</block>
				</block>

				<block type="allure_multicheckout/sales_order_totals" name="second_order_totals" template="sales/order/totals_print.phtml">
					<action method="setLabelProperties">
						<value>colspan="4" class="a-right"</value>
					</action>
					<action method="setValueProperties">
						<value>class="last a-right"</value>
					</action>
					<block type="tax/sales_order_tax" name="tax" template="tax/order/tax.phtml">
						<action method="setIsPlaneMode">
							<value>1</value>
						</action>
					</block>
				</block>

			</block>
		</reference>
	</sales_order_printorder>
	
	<checkout_onepage_index_amazon_payments>
		<reference name="amazon_payments.onepage.widget">
			<block type="allure_multicheckout/checkout_onepage_giftItem" name="onepage.gift_item" template="checkout/onepage/gift_item.phtml" >
				<action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/multishipping/item/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/multishipping/item/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/multishipping/item/default.phtml</template></action>
			</block>
			<block type="checkout/cart_sidebar" name="cart_sidebar" template="checkout/cart/sidebar.phtml" before="-">
                <action method="addItemRender"><type>simple</type><block>checkout/cart_item_renderer</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/cart/sidebar/default.phtml</template></action>
                <block type="core/text_list" name="cart_sidebar.extra_actions" as="extra_actions" translate="label" module="checkout">
                    <label>Shopping Cart Sidebar Extra Actions</label>
                </block>
            </block>
		</reference>
	</checkout_onepage_index_amazon_payments>
	
	<checkout_onepage_review_general_customer>
		<label>One Page Checkout Overview</label>
        <!-- Mage_Checkout -->
        <remove name="right"/>
        <remove name="left"/>

        <block type="checkout/onepage_review_info" name="root" output="toHtml" template="checkout/onepage/review/general_info.phtml">
            <action method="addItemRender"><type>default</type><block>checkout/cart_item_renderer</block><template>checkout/multishipping/item/default.phtml</template></action>
            <action method="addItemRender"><type>grouped</type><block>checkout/cart_item_renderer_grouped</block><template>checkout/multishipping/item/default.phtml</template></action>
            <action method="addItemRender"><type>configurable</type><block>checkout/cart_item_renderer_configurable</block><template>checkout/multishipping/item/default.phtml</template></action>
            <action method="addGiftItemRender"><type>gift</type><block>allure_redesigncheckout/giftmessage</block><template>checkout/onepage/giftmessage.phtml</template></action> 
              
            <block type="checkout/cart_totals" name="checkout.onepage.review.info.totals" as="totals" template="checkout/onepage/review/general_totals.phtml"/>
            <block type="core/text_list" name="checkout.onepage.review.info.items.before" as="items_before" translate="label">
                <label>Items Before</label>
            </block>
            <block type="core/text_list" name="checkout.onepage.review.info.items.after" as="items_after" translate="label">
                <label>Items After</label>
            </block>
            <block type="checkout/agreements" name="checkout.onepage.agreements" as="agreements" template="checkout/onepage/agreements.phtml"/>
            <block type="core/template" name="checkout.onepage.review.button" as="button" template="checkout/onepage/review/button.phtml"/>
        </block>
	</checkout_onepage_review_general_customer>
	
</layout>
