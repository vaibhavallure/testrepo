<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <block type="allure_smartanalytics/ga" name="allure_smartanalytics"
                   template="allure/smartanalytics/ga.phtml">
				   <action method="setPageType"><type>other</type></action>
			</block>
			<action method="addJs" ifconfig="allure_smartanalytics/enhanced/enhanced_ecommerce_enabled">
				<script>allure/smartanalytics/require_jquery.js</script>
				<params><![CDATA[data-group="js001"]]></params>
			</action>
			<action method="addJs" ifconfig="allure_smartanalytics/enhanced/enhanced_ecommerce_enabled">
				<script>allure/smartanalytics/promotion.js</script>
				<params><![CDATA[data-group="js001"]]></params>
			</action>
			<action method="addJs" ifconfig="allure_smartanalytics/enhanced/enhanced_ecommerce_enabled">
				<script>allure/smartanalytics/trafficsource.js</script>
				<params><![CDATA[data-group="js001"]]></params>
			</action>
			<action method="addJs" ifconfig="allure_smartanalytics/enhanced/send_form_data_enabled">
				<script>allure/smartanalytics/ga_formdata.js</script>
				<params><![CDATA[data-group="js001"]]></params>
			</action>
        </reference>
    </default>

