jQuery(".close").on('click',function(){console.log('hiee');
jQuery(".popupRegisterModel").css({"opacity":"0","pointer-events":"none"});
	});

jQuery("#signup-btn-popup").on('click',function(){

	 var myForm = new VarienForm('popup-register-form'); 
	 if(myForm.validator.validate()){ 

		var firstname = jQuery('#firstname').val();
		var lastname = jQuery('#lastname').val();
		var email = jQuery('#email').val();
		var password = jQuery('#password').val();
		var is_subscribed = jQuery('#popup_is_subscribed').is(":checked");
		var key='<?php echo Mage::getSingleton('core/session')->getFormKey(); ?>';

		var request = {
					"firstname":firstname,
					"lastname":lastname,
					"email":email,
					"password":password,
					"is_subscribed":is_subscribed,
					'form_key':key
					};
			
		jQuery.ajax({
		url : '<?php echo Mage::getBaseUrl('web').'customers/account/createCustomer';?>',
		dataType : 'json',
		type : 'POST',
		data: {request:request},
            beforeSend: function() { jQuery('#popup_loader_register').show(); },
            complete: function() { jQuery('#popup_loader_register').hide(); },
		success : function(data){
			if(data.success){
				 jQuery('#reg_msg_div').css('display','none');
				 jQuery(".modalDialog").css({"opacity":"0","pointer-events":"none"});
				 location.reload();
			}else{
				console.log(data.error);
			 jQuery('#reg_msg_div').css('display','block');
			 jQuery('#register-msg').html(data.error);
			 }
			}
		});
	 } //End of form Validate

   });
 </script> 