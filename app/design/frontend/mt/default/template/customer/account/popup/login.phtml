	</div>
</div>


<script type="text/javascript">


jQuery("#sign_in_label").on('click',function(){
	jQuery(".popupLoginModel").css({"opacity":"1","pointer-events":"auto"});
});

jQuery(".close").on('click',function(){console.log('hiee');
jQuery(".popupLoginModel").css({"opacity":"0","pointer-events":"none"});
	});

jQuery("#signin-btn-popup").on('click',function(){

	 var myForm = new VarienForm('popup-login-form', false); 
	 if(myForm.validator.validate()){ 
		var usrname = jQuery('#username').val();
		var passwd = jQuery('#passwd').val();
		var key='<?php echo Mage::getSingleton('core/session')->getFormKey(); ?>';
		var request = {
				"usrname":usrname,
				"passwd":passwd,
				'form_key':key
				};
				
		jQuery.ajax({
		url : '<?php echo $this->getUrl('customers/account/ajaxLogin',array('_secure' => true));?>',
		dataType : 'json',
		type : 'POST',
		data: {request:request},
            beforeSend: function() { jQuery('#popup_loader').show(); },
            complete: function() { jQuery('#popup_loader').hide(); },
		success : function(data){
			if(data.success){
				 jQuery('#login_msg_div').css('display','none');
				 jQuery(".modalDialog").css({"opacity":"0","pointer-events":"none"});
				 location.reload();
			}else{
		     jQuery('#login_msg_div').css('display','block');
			 jQuery('#login-msg').html(data.error);
			}
			}
		});
	 } //End of form Validate

    });

 </script> 