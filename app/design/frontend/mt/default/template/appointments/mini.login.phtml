	<div>
		<a href="#close" title="Close" class="close">X</a>
		<h2 class="appointment-login-popup-header">Sign In with Maria Tash</h2>
		<div>
			<label for="name">Username*:  <input id='username' type="text" name='username' class="ele_width"/>
			</label>
		</div>
		<br />
		<div>
			<label for="kraj">Password*:  <input id='passwd' type="password" name='passwd' class="ele_width"/>
			</label>
		</div>
		<br />
		<span id="login-msg">&nbsp;</span>
		<button type="button" id="signin-btn" class="button">Sign-In</button>
	</div>
</div>


<script type="text/javascript">

jQuery("#signin-maria").on('click',function(){	
jQuery(".modalDialog").css({"opacity":"1","pointer-events":"auto"});
	});


jQuery(".close").on('click',function(){console.log('hiee');
jQuery(".modalDialog").css({"opacity":"0","pointer-events":"none"});
	});

jQuery("#signin-btn").on('click',function(){

var usrname = jQuery('#username').val();
var passwd = jQuery('#passwd').val();

var request = {
		"usrname":usrname,
		"passwd":passwd
		};
		
jQuery.ajax({
	
	url : '<?php echo $this->getUrl('appointments/index/ajaxLogin',array('_secure' => true));?>',
	dataType : 'json',
	type : 'POST',
	data: {request:request},
	success : function(data){
		if(data.success){
			 jQuery('#login-msg').html(data.msg);
			 jQuery('#reg_form').html(data.output);
			 jQuery(".modalDialog").css({"opacity":"0","pointer-events":"none"});
		}else{
		 jQuery('#login-msg').html(data.error);
		}
		}
	});


	});
 </script> 