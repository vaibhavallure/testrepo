        <?php echo "<span class='price_multi'></span> ".$this->helper('checkout')->formatPrice($_item->getPrice()) ?>
    </td>
    
    
    <td  class="cart_col6">
        <div class="mt-purchase-btn">
        	<button data-url="<?php echo $this->getUrl('sales/order/print')."order_id/".$_item->getOrderId()."/"?>" class="button" onclick="openPurchaseWindow(this)">See Receipts</button>
        </div>
        <?php if($productId):?>
	        <div class="mt-purchase-btn">
	        	<button data-item-id="<?php echo $_item->getId()?>" class="button" onclick="reorderItem(this)">Reorder</button>
	        </div>
