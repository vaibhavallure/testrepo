<?php
/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php if($this->getCollection()->getSize()):
//    echo Mage::helper('catalogsearch')->getQueryText();
    $explodeUrl = explode('?',$this->getPageUrl(1));
    $urlViewAllSearch = $explodeUrl[0]."?limit=200&q=".Mage::helper('catalogsearch')->getQueryText();
    $urlViewLessSearch = $explodeUrl[0]."?limit=10&q=".Mage::helper('catalogsearch')->getQueryText();
?>
    <div class="view-all">
    <?php if($this->getTotalNum()<=200 && $this->getTotalNum()>10 && $this->getLimit()!='all' && $this->getLimit()!='200'): ?>
        <a title="<?php echo $this->__('View All') ?>"
            <?php if($this->getRequest()->getModuleName() == 'catalogsearch'): ?>
                href="<?php echo $urlViewAllSearch?>"
            <?php else: ?>
                onClick="javascript:reloadFilters('','all',this)"
            <?php endif; ?> >
            <?php echo $this->__('View All %s Items',$this->getTotalNum()) ?>
        </a>
    <?php elseif($this->getTotalNum()>200 && $this->getTotalNum()>10 && $this->getLimit()<200 && $this->getLimit()!='all'): ?>
        <a onClick="javascript:reloadFilters('','200',this)" title="<?php echo $this->__('View All') ?>"
            <?php if($this->getRequest()->getModuleName() == 'catalogsearch'): ?>
               href="<?php echo $urlViewAllSearch?>"
            <?php else: ?>
               onClick="javascript:reloadFilters('',' ',this)"
            <?php endif; ?> >
            <?php echo $this->__('View 200 Items') ?>
        </a>
    <?php endif; ?>
    </div>

    <?php if(($this->getLimit()==200 || $this->getLimit()=='all') && $this->getCollection()->getSize()>10):?>
    <div class="view-less">
        <a title="<?php echo $this->__('View less') ?>"
            <?php if($this->getRequest()->getModuleName() == 'catalogsearch'): ?>
               href="<?php echo $urlViewLessSearch?>"
            <?php else: ?>
               onClick="javascript:reloadFilters('',' ',this)"
            <?php endif; ?> >
            <?php echo $this->__('View less') ?>
        </a>
    </div>
    <?php endif; ?>

    <?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>

    <?php if(false): ?>
    <p class="amount">
        <?php if($this->getLastPageNum()>1): ?>
            <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
        <?php else: ?>
            <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
        <?php endif; ?>
    </p>
    <?php endif ?>
    <?php if($this->getShowPerPage()):
//        $this->setAvailableLimit(array(10=>10,20=>20,50=>50,'all'=>'all'));?>
    <div class="limiter">
        <!--////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////-->
        <?php if($this->getLastPageNum()>1): ?>
    <div class="pages">
        <strong><?php echo $this->__('Page:') ?></strong>
        <ol>
        <?php if (!$this->isFirstPage()): ?>
            <li style='padding-top:0px'>
                <a class="previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?>" onClick="javascript:reloadFilters(<?php echo ($this->getCollection()->getCurPage()-1) ?>);return false;" href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>">
                    <?php if(!$this->getAnchorTextForPrevious()): ?>
                        <img src="<?php echo $this->getSkinUrl('images/pager_arrow_left.gif') ?>" alt="<?php echo $this->__('Previous') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForPrevious() ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>

        <?php if ($this->canShowFirst()): ?>
            <li style='padding-top:0px'><a class="first" href="<?php echo $this->getFirstPageUrl() ?>">1</a></li>
        <?php endif;?>

        <?php if ($this->canShowPreviousJump()): ?>
            <li style='padding-top:0px'><a class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></li>
        <?php endif;?>

        <?php foreach ($this->getFramePages() as $_page): ?>
            <?php if ($this->isPageCurrent($_page)): ?>
                <li style='padding-top:0px' class="current"><?php echo $_page ?></li>
            <?php else: ?>
                <li style='padding-top:0px'><a href="<?php echo $this->getPageUrl($_page) ?>" onClick="javascript:reloadFilters('<?php echo $_page ?>');return false;"><?php echo $_page ?></a></li>
            <?php endif;?>
        <?php endforeach;?>


        <?php if ($this->canShowNextJump()): ?>
            <li style='padding-top:0px'><a class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a></li>
        <?php endif;?>

        <?php if ($this->canShowLast()): ?>
          <li style='padding-top:0px'><a class="last" href="<?php echo $this->getLastPageUrl() ?>"><?php echo $this->getLastPageNum() ?></a></li>
        <?php endif;?>

        <?php if (!$this->isLastPage()): ?>
            <li style='padding-top:0px'>
                <a class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" onClick="javascript:reloadFilters(<?php echo ($this->getCollection()->getCurPage()+1) ?>);return false;" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">
                    <?php if(!$this->getAnchorTextForNext()): ?>
                        <img src="<?php echo $this->getSkinUrl('images/pager_arrow_right.gif') ?>" alt="<?php echo $this->__('Next') ?>" class="v-middle" />
                    <?php else: ?>
                        <?php echo $this->getAnchorTextForNext() ?>
                    <?php endif;?>
                </a>
            </li>
        <?php endif;?>
        </ol>

    </div>
    <?php endif; ?>
        <!--///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////--->
        <label><?php echo $this->__('Show') ?></label>
        <div class="styled pager-content-mt"><select id="showPerPage" onchange="setLocation(this.value)">
        <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
            <option value="<?php echo $this->getLimitUrl($_limit) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                <?php echo $_limit ?>
            </option>
        <?php endforeach; ?>
        </select></div> <?php if(!$this->isLimitCurrent('all')):
            echo $this->__('per page');
            endif; ?>
    </div>
    <?php endif ?>

    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>