<script type="text/javascript">
    function blockShow(selectId, blockId)
    {
        jBelvgDd(selectId).live('change',function() {
            var value   = jBelvgDd(this).val();
            if (value=='0') {
                jBelvgDd('#sortable '+blockId).hide();
            }else{
                jBelvgDd('#sortable '+blockId).show();
            }
        });
    }
    jBelvgDd(document).ready(function() {
        blockShow('#category_rows', '#b1');
        blockShow('#categories_list', '#b2');
        blockShow('#category_last_product', '#b3');
        blockShow('#category_static_block_id', '#b4');
        jBelvgDd('#use_default_store_view').live('click',function() {
            if (jBelvgDd(this).is(':checked')) {
                jBelvgDd('#category_ddmenu_settings select').attr('disabled', 'disabled');
                jBelvgDd('#sortable').hide();
            } else {
                jBelvgDd('#category_ddmenu_settings select').attr('disabled', '');
                jBelvgDd('#sortable').show();
            }
        });
    });
</script>