<script type="text/javascript">
    function getFilterValues(idx)
    {
        var inputs = $$('.advr-widget-toolbar input, .advr-widget-toolbar select, .advr-extended-filter input, .advr-extended-filter select <?= $inputs ?>'+idx); //.advr-filter-'+idx + ' input'
        var values = [];

        for(var i in inputs) {
            if(inputs[i].value && inputs[i].value.length) {
                values.push(inputs[i]);
            }
        }
        return encode_base64(Form.serializeElements(values));
    }
</script>
