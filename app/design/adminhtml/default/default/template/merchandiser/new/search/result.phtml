    <?php
        $limitPage = Mage::getSingleton('catalog/session')->getLimitPage();
        Mage::getSingleton('catalog/session')->setLimitPage(OnTap_Merchandiser_Block_Search_Result::PAGE_SEARCH_RESULTS);
    ?>
    <div class="column" id="merchandiser-search-list">
        <?php echo $this->getProductListHtml() ?>
    </div>
