<layout>
    <findify_adminhtml_feed_edit>
        <reference name="content">
            <block type="findify/adminhtml_feed_edit" name="findify_feed_edit" />
            <block type="findify/adminhtml_feed_grid_js" name="findify_feed_js" />
        </reference>
        <reference name="head">
            <action method="addJs"><script>findify/adminhtml/feed.js</script></action>
        </reference>
        <reference name="left">
            <block type="findify/adminhtml_feed_edit_tabs" name="findify_feed_edit_tabs" />
        </reference>
    </findify_adminhtml_feed_edit>
    <findify_adminhtml_feed_generate>
        <reference name="content">
            <block type="findify/adminhtml_feed_grid_js" name="findify_feed_js" />
            <block type="findify/adminhtml_feed_generate_result" template="cminds/findify/feed/generate/result.phtml" name="findify_feed_generate_result" />
        </reference>
        <reference name="head">
            <action method="addJs"><script>findify/adminhtml/feed.js</script></action>
            <action method="addItem"><type>skin_css</type><name>cminds/findify/feed.css</name></action>
        </reference>
    </findify_adminhtml_feed_generate>
    <findify_adminhtml_feed_index>
        <reference name="content">
            <block type="findify/adminhtml_feed" name="findify_adminhtml_feed" />
        </reference>
        <reference name="head">
            <action method="addJs"><script>findify/adminhtml/feed.js</script></action>
        </reference>
    </findify_adminhtml_feed_index>
</layout>
