<layout>
    <default>

    </default>
    <adminhtml_catalog_category_edit>
        <reference name="head">
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/jquery.v1.5.min.js</js></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/jqueryDd.noconflict.js</js></action>
            <action method="addItem" ifconfig="ddmenu/settings/enabled"><type>skin_css</type><name>belvg/css/ddmenu.css</name><params/><if/></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/ui/jquery.ui.core.js</js></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/ui/jquery.ui.widget.js</js></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/ui/jquery.ui.mouse.js</js></action>
            <action method="addJs"   ifconfig="ddmenu/settings/enabled"><js>belvg/ui/jquery.ui.sortable.js</js></action>
        </reference>
        <reference name="js">
            <block type="core/template" name="ddmenu_category_tab_js">
                <action method="setTemplate"    ifconfig="ddmenu/settings/enabled">
                    <template>ddmenu/category_tab_js.phtml</template>
                </action>
            </block>
        </reference>
    </adminhtml_catalog_category_edit>
    <adminhtml_system_config_edit>
        <reference name="head">
            <action method="addJs"><js>belvg/jquery.v1.5.min.js</js></action>
            <action method="addJs"><js>belvg/jqueryDd.noconflict.js</js></action>
            <action method="addJs"><js>belvg/jquery.easing-1.3.pack.js</js></action>
            <action method="addJs"><js>belvg/jscolor/jscolor.js</js></action>
            <action method="addItem"><type>skin_css</type><name>belvg/css/ddmenu.css</name><params/><if/></action>
        </reference>
        <reference name="js">
            <block type="core/template" name="ddmenu.settings.js">
                <action method="setTemplate"><template>ddmenu/js.phtml</template></action>
            </block>
        </reference>
    </adminhtml_system_config_edit>

</layout>
